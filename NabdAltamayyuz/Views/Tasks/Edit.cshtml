@model NabdAltamayyuz.Models.WorkTask
@using System.Globalization

@{
    var isRtl = CultureInfo.CurrentCulture.Name.StartsWith("ar");
    ViewData["Title"] = isRtl ? "تعديل المهمة" : "Edit Task";
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool isSuperAdmin = User.IsInRole("SuperAdmin");
}

<div class="container py-5 animate-fade-in" style="margin-top: 100px;">
    <div class="row justify-content-center">
        <div class="col-md-9">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-dark text-white py-3 px-4 d-flex justify-content-between">
                    <h5 class="mb-0 fw-bold text-gold"><i class="fas fa-edit me-2"></i> @(isRtl ? "تعديل المهمة" : "Edit Task")</h5>
                    <a href="/Tasks" class="btn btn-sm btn-outline-light rounded-pill">@(isRtl ? "إلغاء" : "Cancel")</a>
                </div>
                <div class="card-body p-4 p-md-5 bg-white">
                    <form asp-action="Edit" enctype="multipart/form-data" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="AttachmentPath" />

                        @if (isSuperAdmin)
                        {
                            <div class="mb-4">
                                <label class="form-label fw-bold small text-gold">@(isRtl ? "نقل المهمة لشركة أخرى (اختياري)" : "Transfer to Another Company (Optional)")</label>
                                <select id="companySelect" class="form-select bg-light" onchange="loadEmployees(this.value)" asp-items="ViewBag.Companies">
                                    <option value="">@(isRtl ? "-- الشركة الحالية --" : "-- Current Company --")</option>
                                </select>
                            </div>
                        }

                        <div class="mb-4">
                            <label class="form-label fw-bold small">@(isRtl ? "إسناد إلى" : "Assign To")</label>
                            <select asp-for="AssignedToId" id="employeeSelect" class="form-select bg-light" required asp-items="ViewBag.Employees"></select>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Title" class="form-label fw-bold small">@(isRtl ? "عنوان المهمة" : "Task Title")</label>
                            <input asp-for="Title" class="form-control bg-light" required />
                        </div>

                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label asp-for="StartDate" class="form-label fw-bold small">@(isRtl ? "تاريخ البدء" : "Start Date")</label>
                                <input asp-for="StartDate" type="date" class="form-control bg-light" required />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="DueDate" class="form-label fw-bold small">@(isRtl ? "تاريخ الانتهاء" : "Due Date")</label>
                                <input asp-for="DueDate" type="date" class="form-control bg-light" required />
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-bold small">@(isRtl ? "الوصف" : "Description")</label>
                            <textarea asp-for="Description" class="form-control bg-light" rows="4"></textarea>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.AttachmentPath))
                        {
                            <div class="alert alert-info py-2 d-flex justify-content-between align-items-center mb-3">
                                <small><i class="fas fa-paperclip me-2"></i> @(isRtl ? "يوجد مرفق حالي" : "Attachment exists")</small>
                                <a href="/uploads/tasks/@Model.AttachmentPath" target="_blank" class="btn btn-sm btn-light">@(isRtl ? "عرض" : "View")</a>
                            </div>
                        }

                        <div class="mb-4">
                            <label class="form-label fw-bold small">@(isRtl ? "تحديث المرفق" : "Update Attachment")</label>
                            <input type="file" name="attachment" class="form-control" />
                        </div>

                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-gold bg-dark text-gold fw-bold px-5 rounded-pill shadow-sm">
                                <i class="fas fa-save me-2"></i> @(isRtl ? "حفظ التعديلات" : "Save Changes")
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function loadEmployees(companyId) {
            var empSelect = document.getElementById("employeeSelect");
            var loadingText = '@(isRtl ? "جار التحميل..." : "Loading...")';
            empSelect.innerHTML = "<option>" + loadingText + "</option>";

            if (!companyId) return;

            fetch('/Tasks/GetEmployeesByCompany?companyId=' + companyId)
                .then(res => res.json())
                .then(data => {
                    empSelect.innerHTML = "";
                    data.forEach(item => {
                        var opt = document.createElement("option");
                        opt.value = item.id;
                        opt.text = item.name;
                        empSelect.appendChild(opt);
                    });
                });
        }
    </script>
}