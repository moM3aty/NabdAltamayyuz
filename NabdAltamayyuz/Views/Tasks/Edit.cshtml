@model NabdAltamayyuz.Models.WorkTask
@using System.Globalization

@{
    ViewData["Title"] = "تعديل المهمة";
    var isRtl = CultureInfo.CurrentCulture.Name.StartsWith("ar");
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool isSuperAdmin = User.IsInRole("SuperAdmin");
}

<div class="container py-5 animate-fade-in" style="margin-top: 100px;">
    <div class="row justify-content-center">
        <div class="col-md-9">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-dark text-white py-3 px-4 d-flex justify-content-between">
                    <h5 class="mb-0 fw-bold text-gold"><i class="fas fa-edit me-2"></i> تعديل المهمة</h5>
                    <a href="/Tasks" class="btn btn-sm btn-outline-light rounded-pill">إلغاء</a>
                </div>
                <div class="card-body p-4 p-md-5 bg-white">
                    <form asp-action="Edit" enctype="multipart/form-data" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="AttachmentPath" />

                        @if (isSuperAdmin)
                        {
                            <div class="mb-4">
                                <label class="form-label fw-bold small text-gold">نقل المهمة لشركة أخرى (اختياري)</label>
                                <select id="companySelect" class="form-select bg-light" onchange="loadEmployees(this.value)" asp-items="ViewBag.Companies">
                                    <option value="">-- الشركة الحالية --</option>
                                </select>
                            </div>
                        }

                        <div class="mb-4">
                            <label class="form-label fw-bold small">إسناد إلى</label>
                            <select asp-for="AssignedToId" id="employeeSelect" class="form-select bg-light" required asp-items="ViewBag.Employees"></select>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Title" class="form-label fw-bold small">عنوان المهمة</label>
                            <input asp-for="Title" class="form-control bg-light" required />
                        </div>

                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label asp-for="StartDate" class="form-label fw-bold small">تاريخ البدء</label>
                                <input asp-for="StartDate" type="date" class="form-control bg-light" required />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="DueDate" class="form-label fw-bold small">تاريخ الانتهاء</label>
                                <input asp-for="DueDate" type="date" class="form-control bg-light" required />
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-bold small">الوصف</label>
                            <textarea asp-for="Description" class="form-control bg-light" rows="4"></textarea>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.AttachmentPath))
                        {
                            <div class="alert alert-info py-2 d-flex justify-content-between align-items-center mb-3">
                                <small><i class="fas fa-paperclip me-2"></i> يوجد مرفق حالي</small>
                                <a href="/uploads/tasks/@Model.AttachmentPath" target="_blank" class="btn btn-sm btn-light">عرض</a>
                            </div>
                        }

                        <div class="mb-4">
                            <label class="form-label fw-bold small">تحديث المرفق</label>
                            <input type="file" name="attachment" class="form-control" />
                        </div>

                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-gold bg-dark text-gold fw-bold px-5 rounded-pill shadow-sm">
                                <i class="fas fa-save me-2"></i> حفظ التعديلات
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function loadEmployees(companyId) {
            var empSelect = document.getElementById("employeeSelect");
            empSelect.innerHTML = "<option>جار التحميل...</option>";
            if (!companyId) return;
            fetch('/Tasks/GetEmployeesByCompany?companyId=' + companyId)
                .then(res => res.json())
                .then(data => {
                    empSelect.innerHTML = "";
                    data.forEach(item => {
                        var opt = document.createElement("option");
                        opt.value = item.id; opt.text = item.name;
                        empSelect.appendChild(opt);
                    });
                });
        }
    </script>
}