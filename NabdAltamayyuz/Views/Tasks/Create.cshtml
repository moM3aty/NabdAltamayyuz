@model NabdAltamayyuz.Models.WorkTask
@using System.Globalization

@{
    ViewData["Title"] = "إسناد مهمة جديدة";
    var isRtl = CultureInfo.CurrentCulture.Name.StartsWith("ar");
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool isSuperAdmin = User.IsInRole("SuperAdmin");
}

<div class="container py-5 animate-fade-in" style="margin-top: 100px;">
    <div class="row justify-content-center">
        <div class="col-md-9">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-dark text-white py-3 border-0 px-4 d-flex justify-content-between">
                    <h5 class="mb-0 fw-bold text-gold"><i class="fas fa-plus-circle me-2"></i> إسناد مهمة جديدة</h5>
                    <a href="/Tasks" class="btn btn-sm btn-outline-light rounded-pill">إلغاء</a>
                </div>
                <div class="card-body p-4 p-md-5 bg-white">
                    <form asp-action="Create" enctype="multipart/form-data" method="post">
                        @Html.AntiForgeryToken()

                        @if (isSuperAdmin)
                        {
                            <div class="mb-4">
                                <label class="form-label fw-bold small text-gold">اختيار الشركة</label>
                                <select id="companySelect" class="form-select bg-light" onchange="loadEmployees(this.value)">
                                    <option value="">-- اختر الشركة --</option>
                                    @foreach (var comp in ViewBag.Companies as SelectList)
                                    {
                                        <option value="@comp.Value">@comp.Text</option>
                                    }
                                </select>
                            </div>
                        }

                        <div class="mb-4">
                            <label class="form-label fw-bold small">تعيين إلى موظف</label>
                            <select asp-for="AssignedToId" id="employeeSelect" class="form-select bg-light" required asp-items="ViewBag.Employees">
                                <option value="">-- اختر الموظف --</option>
                            </select>
                            <span asp-validation-for="AssignedToId" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Title" class="form-label fw-bold small">عنوان المهمة</label>
                            <input asp-for="Title" class="form-control bg-light" placeholder="مثال: تجديد رخصة..." required />
                        </div>

                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label asp-for="StartDate" class="form-label fw-bold small">تاريخ البدء</label>
                                <input asp-for="StartDate" type="date" class="form-control bg-light" required value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="DueDate" class="form-label fw-bold small">تاريخ الانتهاء</label>
                                <input asp-for="DueDate" type="date" class="form-control bg-light" required />
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-bold small">الوصف والتفاصيل</label>
                            <textarea asp-for="Description" class="form-control bg-light" rows="4"></textarea>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold small">مرفقات (اختياري)</label>
                            <input type="file" name="attachment" class="form-control bg-light" />
                        </div>

                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-gold bg-dark text-gold fw-bold px-5 rounded-pill shadow-lg">
                                <i class="fas fa-paper-plane me-2"></i> إرسال المهمة
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function loadEmployees(companyId) {
            var empSelect = document.getElementById("employeeSelect");
            empSelect.innerHTML = "<option>جار التحميل...</option>";
            if (!companyId) { empSelect.innerHTML = "<option value=''>-- اختر الموظف --</option>"; return; }
            fetch('/Tasks/GetEmployeesByCompany?companyId=' + companyId)
                .then(res => res.json())
                .then(data => {
                    empSelect.innerHTML = "<option value=''>-- اختر الموظف --</option>";
                    data.forEach(item => {
                        var opt = document.createElement("option");
                        opt.value = item.id; opt.text = item.name;
                        empSelect.appendChild(opt);
                    });
                });
        }
    </script>
}