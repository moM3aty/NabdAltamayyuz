@model NabdAltamayyuz.Models.WorkTask
@using System.Globalization

@{
    ViewData["Title"] = "إسناد مهمة جديدة";
    var isRtl = CultureInfo.CurrentCulture.Name.StartsWith("ar");
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- تمت إضافة margin-top: 100px لتفادي التداخل مع الـ Navbar -->
<div class="container py-5 animate-fade-in" style="margin-top: 100px;">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-dark text-white py-3 border-0 d-flex justify-content-between align-items-center px-4">
                    <h5 class="mb-0 fw-bold text-gold">
                        <i class="fas fa-plus-circle me-2"></i> @(isRtl ? "إسناد مهمة جديدة" : "Assign New Task")
                    </h5>
                    <a href="/Tasks" class="btn btn-sm btn-outline-light rounded-pill border-secondary text-white-50 hover-white">
                        <i class="fas fa-times me-1"></i> @(isRtl ? "إلغاء" : "Cancel")
                    </a>
                </div>

                <div class="card-body p-4 p-md-5 bg-white">
                    <form asp-action="Create" enctype="multipart/form-data" method="post">
                        @Html.AntiForgeryToken()

                        <div class="alert alert-light border-start border-4 border-gold bg-gold bg-opacity-10 rounded-end mb-4">
                            <i class="fas fa-info-circle text-gold me-2"></i>
                            <small>@(isRtl ? "سيتم إشعار الموظف بالمهمة فور إضافتها." : "The employee will be notified immediately upon assignment.")</small>
                        </div>

                        <div class="row g-4">
                            <!-- Task Title -->
                            <div class="col-12">
                                <label asp-for="Title" class="form-label fw-bold text-muted small">@(isRtl ? "عنوان المهمة" : "Task Title")</label>
                                <div class="input-group shadow-sm">
                                    <span class="input-group-text bg-light border-end-0 text-gold"><i class="fas fa-heading"></i></span>
                                    <input asp-for="Title" class="form-control bg-light border-start-0" placeholder="@(isRtl ? "مثال: تجديد رخصة البلدية" : "e.g. Renew License")" required />
                                </div>
                                <span asp-validation-for="Title" class="text-danger small mt-1"></span>
                            </div>

                            <!-- Assign To -->
                            <div class="col-md-6">
                                <label asp-for="AssignedToId" class="form-label fw-bold text-muted small">@(isRtl ? "تعيين إلى موظف" : "Assign To")</label>
                                <div class="input-group shadow-sm">
                                    <span class="input-group-text bg-light border-end-0 text-gold"><i class="fas fa-user-tag"></i></span>
                                    <select asp-for="AssignedToId" class="form-select bg-light border-start-0" asp-items="ViewBag.Employees" required>
                                        <option value="">@(isRtl ? "-- اختر الموظف --" : "-- Select Employee --")</option>
                                    </select>
                                </div>
                                <span asp-validation-for="AssignedToId" class="text-danger small mt-1"></span>
                            </div>

                            <!-- Due Date -->
                            <div class="col-md-6">
                                <label asp-for="DueDate" class="form-label fw-bold text-muted small">@(isRtl ? "تاريخ الاستحقاق" : "Due Date")</label>
                                <div class="input-group shadow-sm">
                                    <span class="input-group-text bg-light border-end-0 text-gold"><i class="far fa-calendar-alt"></i></span>
                                    <input asp-for="DueDate" type="date" class="form-control bg-light border-start-0" required />
                                </div>
                                <span asp-validation-for="DueDate" class="text-danger small mt-1"></span>
                            </div>

                            <!-- Description -->
                            <div class="col-12">
                                <label asp-for="Description" class="form-label fw-bold text-muted small">@(isRtl ? "تفاصيل المهمة" : "Task Description")</label>
                                <textarea asp-for="Description" class="form-control bg-light shadow-sm" rows="4" placeholder="@(isRtl ? "اكتب تفاصيل المهمة والتعليمات هنا..." : "Enter task details here...")"></textarea>
                                <span asp-validation-for="Description" class="text-danger small mt-1"></span>
                            </div>

                            <!-- Attachments -->
                            <div class="col-12">
                                <label class="form-label fw-bold text-muted small">@(isRtl ? "مرفقات (اختياري)" : "Attachments (Optional)")</label>
                                <div class="input-group shadow-sm">
                                    <input type="file" name="attachment" class="form-control bg-light" accept=".pdf,.jpg,.png,.jpeg,.docx" />
                                    <span class="input-group-text bg-light text-muted"><i class="fas fa-paperclip"></i></span>
                                </div>
                                <div class="form-text small text-muted">
                                    <i class="fas fa-exclamation-triangle me-1"></i> @(isRtl ? "الملفات المسموحة: PDF, صور. الحد الأقصى 5 ميجابايت." : "Allowed: PDF, Images. Max 5MB.")
                                </div>
                            </div>
                        </div>

                        <hr class="my-4 opacity-10">

                        <div class="d-flex justify-content-end gap-2">
                            <button type="submit" class="btn btn-gold bg-dark text-gold fw-bold px-5 py-2 rounded-pill hover-scale shadow-lg">
                                <i class="fas fa-paper-plane me-2"></i> @(isRtl ? "إرسال المهمة" : "Assign Task")
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>