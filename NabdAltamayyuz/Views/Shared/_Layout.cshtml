@using System.Globalization
@{
    var isRtl = CultureInfo.CurrentCulture.Name.StartsWith("ar");
    var dir = isRtl ? "rtl" : "ltr";
    var lang = isRtl ? "ar" : "en";
}
<!DOCTYPE html>
<html lang="@lang" dir="@dir">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @(isRtl ? "نبض التميز الذهبي" : "Golden Pulse")</title>

    <!-- Bootstrap 5 RTL/LTR logic handled -->
    @if (isRtl)
    {
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.rtl.min.css">
    }
    else
    {
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    }

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@300;400;600;700;900&family=Poppins:wght@300;400;600;700;900&display=swap" rel="stylesheet">

    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg premium-navbar fixed-top">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="/">
                <i class="fas fa-gem fa-xl text-gold me-2"></i>
                <div class="d-flex flex-column">
                    <span class="fw-bold text-white fs-5">@(isRtl ? "نبض التميز الذهبي" : "Golden Pulse")</span>
                </div>
            </a>

            <button class="navbar-toggler border-0 text-gold" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                <i class="fas fa-bars fa-lg"></i>
            </button>

            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0 align-items-center">
                    <li class="nav-item"><a class="nav-link" href="/">@(isRtl ? "الرئيسية" : "Home")</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Home/ServicesSector">@(isRtl ? "الخدمات" : "Services")</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Home/ContractingSector">@(isRtl ? "المقاولات" : "Contracting")</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Home/About">@(isRtl ? "من نحن" : "About Us")</a></li>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item dropdown ms-lg-3">
                            <a class="nav-link dropdown-toggle btn btn-outline-light rounded-pill px-3 py-1 border-0" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-user-circle me-1"></i> @User.Identity.Name
                            </a>
                            <ul class="dropdown-menu shadow-lg border-0 mt-2">
                                <li><a class="dropdown-item" href="/Dashboard">@(isRtl ? "لوحة التحكم" : "Dashboard")</a></li>
                                <li><a class="dropdown-item" href="/Account/Profile">@(isRtl ? "الملف الشخصي" : "Profile")</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-danger" href="/Account/Logout">@(isRtl ? "خروج" : "Logout")</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item ms-lg-3">
                            <a class="btn btn-outline-premium px-4 py-2" href="/Account/Login">
                                @(isRtl ? "دخول الموظفين" : "Staff Login")
                            </a>
                        </li>
                    }
                </ul>

                <!-- Language Switcher -->
                <div class="ms-lg-3 border-start border-secondary ps-3 my-2 my-lg-0">
                    <form asp-controller="Home" asp-action="SetLanguage" method="post" class="d-inline">
                        <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                        <input type="hidden" name="culture" value="@(isRtl ? "en" : "ar")" />
                        <button type="submit" class="btn btn-link text-white text-decoration-none fw-bold p-0">
                            @(isRtl ? "EN" : "عربي")
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="flex-grow-1">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer-premium mt-auto">
        <div class="container pb-5">
            <div class="row g-5">
                <div class="col-lg-4 col-md-6">
                    <h4 class="text-white mb-4 fw-bold">@(isRtl ? "نبض التميز الذهبي" : "Golden Pulse")</h4>
                    <p class="mb-4 text-white-50">
                        @(isRtl ? "نصيغ الحلول الإدارية المتكاملة، لتمكين شركتكم من التركيز على أهدافها الكبرى." : "Crafting integrated management solutions, empowering your company to focus on its major goals.")
                    </p>
                    <div class="d-flex gap-3">
                        <a href="https://www.snapchat.com/add/nabd-altamayyuz?share_id=kz00QDBrFio&locale=ar-SA" target="_blank" class="btn btn-outline-light rounded-circle p-0 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;"><i class="fab fa-snapchat-ghost"></i></a>
                        <a href="https://www.instagram.com/nabd.altamayyuz?igsh=MWFkZTBtcWpudjE2bA==" target="_blank" class="btn btn-outline-light rounded-circle p-0 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;"><i class="fab fa-instagram"></i></a>
                        <a href="https://www.facebook.com/profile.php?viewas=&id=61587119782406&show_switched_toast=false&show_switched_tooltip=false&is_tour_dismissed=false&is_tour_completed=false&show_podcast_settings=false&show_community_review_changes=false&should_open_composer=false&badge_type=NEW_MEMBER&show_community_rollback_toast=false&show_community_rollback=false&show_follower_visibility_disclosure=false&bypass_exit_warning=true" target="_blank" class="btn btn-outline-light rounded-circle p-0 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;"><i class="fab fa-facebook-f"></i></a>
                    </div>
                </div>

                <div class="col-lg-2 col-md-6">
                    <h5 class="text-white mb-4">@(isRtl ? "روابط سريعة" : "Quick Links")</h5>
                    <ul class="list-unstyled">
                        <li><a href="/" class="footer-link">@(isRtl ? "الرئيسية" : "Home")</a></li>
                        <li><a href="/Home/About" class="footer-link">@(isRtl ? "من نحن" : "About Us")</a></li>
                        <li><a href="/Home/ServicesSector" class="footer-link">@(isRtl ? "الخدمات" : "Services")</a></li>
                        <li><a href="/Home/ContractingSector" class="footer-link">@(isRtl ? "المقاولات" : "Contracting")</a></li>
                    </ul>
                </div>

                <div class="col-lg-3 col-md-6">
                    <h5 class="text-white mb-4">@(isRtl ? "تواصل معنا" : "Contact")</h5>
                    <ul class="list-unstyled text-white-50">
                        <li class="mb-3 d-flex"><i class="fas fa-map-marker-alt text-gold mt-1 me-2"></i> <span>Riyadh, Saudi Arabia</span></li>
                        <li class="mb-3 d-flex"><i class="fas fa-phone text-gold mt-1 me-2"></i> <span dir="ltr">0562056821</span></li>
                        <li class="mb-3 d-flex"><i class="fas fa-phone text-gold mt-1 me-2"></i> <span dir="ltr">0555906992</span></li>
                        <li class="mb-3 d-flex"><i class="fas fa-phone text-gold mt-1 me-2"></i> <span dir="ltr">0546892676</span></li>
                        <li class="mb-3 d-flex"><i class="fab fa-whatsapp text-gold mt-1 me-2"></i> <span dir="ltr">0562058536</span></li>
                    </ul>
                </div>

                <div class="col-lg-3 col-md-6">
                    <div class="bg-dark p-4 rounded-4 border border-secondary text-center">
                        <i class="fas fa-headset fa-3x text-gold mb-3"></i>
                        <h5 class="text-white">@(isRtl ? "هل تحتاج مساعدة؟" : "Need Help?")</h5>
                        <p class="small text-white-50 mb-3">@(isRtl ? "فريقنا جاهز للرد على استفساراتكم" : "Our team is ready to answer your queries")</p>
                        <a href="https://wa.me/966562056821" target="_blank" class="btn btn-premium w-100 rounded-pill btn-sm">@(isRtl ? "تحدث معنا" : "Chat with us")</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="border-top border-secondary py-4 text-center bg-black bg-opacity-25">
            <div class="container">
                <small class="text-white-50">&copy; @DateTime.Now.Year @(isRtl ? "نبض التميز الذهبي. جميع الحقوق محفوظة." : "Golden Pulse. All rights reserved.")</small>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Navbar Scrolled Effect
        window.addEventListener('scroll', function() {
            if (window.scrollY > 50) {
                document.querySelector('.premium-navbar').classList.add('scrolled');
            } else {
                document.querySelector('.premium-navbar').classList.remove('scrolled');
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>