@using System.Globalization
@{
    ViewData["Title"] = "تسجيل الدخول";
    var isRtl = CultureInfo.CurrentCulture.Name.StartsWith("ar");
    Layout = null;
}

<!DOCTYPE html>
<html lang="@(isRtl ? "ar" : "en")" dir="@(isRtl ? "rtl" : "ltr")">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(isRtl ? "تسجيل الدخول" : "Login") - @(isRtl ? "نبض التميز الذهبي" : "Golden Pulse")</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@300;400;600;700&family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">

    <style>
        :root {
            --primary-gold: #D4AF37;
            --gold-gradient: linear-gradient(135deg, #D4AF37 0%, #F4E4BC 50%, #aa8c2c 100%);
            --dark-bg: #0F172A;
        }

        body {
            background: linear-gradient(135deg, rgba(15, 23, 42, 0.95) 0%, rgba(15, 23, 42, 0.85) 100%), url('https://images.unsplash.com/photo-1497215728101-856f4ea42174?auto=format&fit=crop&q=80');
            background-size: cover;
            background-position: center;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Cairo', 'Poppins', sans-serif;
        }

        .login-card {
            background: rgba(15, 23, 42, 0.6);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-top: 1px solid rgba(212, 175, 55, 0.5);
            border-radius: 24px;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
            width: 100%;
            max-width: 420px;
            padding: 3rem 2.5rem;
        }

        .brand-logo img {
            max-height: 100px;
            margin-bottom: 1.5rem;
            filter: drop-shadow(0 0 10px rgba(212, 175, 55, 0.3));
            border-radius: 5%;
            border: 2px solid var(--primary-gold);
        }

        .text-gold {
            color: var(--primary-gold) !important;
        }

        .form-control {
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            color: white !important;
            height: 50px;
        }

            .form-control:focus {
                background: rgba(255, 255, 255, 0.1);
                border-color: var(--primary-gold);
                box-shadow: none;
            }

        .btn-gold {
            background: var(--gold-gradient);
            color: #0F172A;
            font-weight: 700;
            border: none;
            height: 50px;
            border-radius: 12px;
            width: 100%;
        }

        .input-group-text {
            background: rgba(255, 255, 255, 0.05);
            border-color: rgba(255, 255, 255, 0.1);
            color: var(--primary-gold);
        }
    </style>
</head>
<body>
    <div class="login-card text-center">
        <div class="brand-logo">
            <!-- اللوجو -->
            <img src="~/images/logo.jpg" alt="نبض التميز الذهبي" class="img-fluid">
            <h4 class="text-white fw-bold mb-4">نبض التميز الذهبي</h4>
        </div>

        <h5 class="fw-bold text-white mb-4">@(isRtl ? "تسجيل الدخول" : "Login")</h5>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger bg-danger bg-opacity-25 border-0 text-white small py-2 mb-3">@ViewBag.Error</div>
        }

        <form action="/Account/Login" method="post">
            @Html.AntiForgeryToken()
            <div class="mb-3 text-start">
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                    <input type="email" name="email" class="form-control" placeholder="@(isRtl ? "البريد الإلكتروني" : "Email")" required>
                </div>
            </div>
            <div class="mb-3 text-start">
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                    <input type="password" name="password" class="form-control" placeholder="@(isRtl ? "كلمة المرور" : "Password")" required>
                </div>
            </div>
            <div class="form-check text-start mb-4">
                <input class="form-check-input bg-transparent border-secondary" type="checkbox" id="rememberMe">
                <label class="form-check-label text-white-50 small" for="rememberMe">@(isRtl ? "تذكرني" : "Remember me")</label>
            </div>
            <button type="submit" class="btn btn-gold">@(isRtl ? "دخول" : "Sign In")</button>
        </form>
    </div>
</body>
</html>