@model NabdAltamayyuz.Models.ApplicationUser
@using System.Globalization

@{
    ViewData["Title"] = "الملف الشخصي";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var isRtl = CultureInfo.CurrentCulture.Name.StartsWith("ar");

    // Model now contains real data
    var roleDisplay = Model.Role.ToString();
}

<div class="container py-5 animate-fade-in" style="margin-top: 120px;">
    <div class="row g-4">
        <!-- Sidebar Profile Card -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden h-100">
                <div class="card-body p-0 text-center">
                    <div class="bg-dark py-5 position-relative">
                        <div class="position-absolute top-0 start-0 w-100 h-100 opacity-10" style="background: url('https://www.transparenttextures.com/patterns/cubes.png');"></div>
                        <div class="avatar bg-white text-gold display-3 d-flex align-items-center justify-content-center mx-auto shadow-lg position-relative z-1" style="width: 130px; height: 130px; border-radius: 50%; border: 5px solid #D4AF37;">
                            @Model.FullName.Substring(0, 1).ToUpper()
                        </div>
                    </div>
                    <div class="p-4 mt-2">
                        <h4 class="fw-bold text-dark mb-1">@Model.FullName</h4>
                        <p class="text-muted mb-2">@Model.Email</p>
                        <span class="badge bg-gold text-dark px-4 py-2 rounded-pill shadow-sm mb-4">@roleDisplay</span>

                        <div class="d-grid gap-2">
                            @if (!string.IsNullOrEmpty(Model.AttachmentPath))
                            {
                                <a href="/uploads/employees/@Model.AttachmentPath" target="_blank" class="btn btn-outline-dark rounded-pill"><i class="fas fa-file-contract me-2"></i> @(isRtl ? "مستنداتي" : "My Docs")</a>
                            }
                            <button class="btn btn-light text-danger rounded-pill" onclick="location.href='/Account/Logout'"><i class="fas fa-sign-out-alt me-2"></i> @(isRtl ? "تسجيل الخروج" : "Logout")</button>
                        </div>
                    </div>
                </div>

                <div class="card-footer bg-white border-top p-4">
                    <h6 class="fw-bold small text-uppercase text-muted mb-3">@(isRtl ? "معلومات النظام" : "System Info")</h6>
                    @if (Model.Company != null)
                    {
                        <div class="d-flex justify-content-between mb-2">
                            <small class="text-muted">@(isRtl ? "الشركة" : "Company")</small>
                            <small class="fw-bold text-dark">@Model.Company.Name</small>
                        </div>
                    }
                    <div class="d-flex justify-content-between">
                        <small class="text-muted">@(isRtl ? "تاريخ الانضمام" : "Joined")</small>
                        <small class="fw-bold text-dark">@Model.CreatedAt.ToString("dd MMM yyyy")</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Details & Settings -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden mb-4">
                <div class="card-header bg-white py-4 px-4 border-bottom d-flex align-items-center">
                    <i class="fas fa-user-cog text-gold fa-lg me-3"></i>
                    <div>
                        <h5 class="mb-0 fw-bold text-dark">@(isRtl ? "بيانات الحساب" : "Account Details")</h5>
                        <small class="text-muted">@(isRtl ? "المعلومات الشخصية والوظيفية" : "Personal & Job Info")</small>
                    </div>
                </div>
                <div class="card-body p-4">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <label class="form-label fw-bold small text-muted">@(isRtl ? "الاسم الكامل" : "Full Name")</label>
                            <input type="text" class="form-control bg-light border-0" value="@Model.FullName" readonly>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold small text-muted">@(isRtl ? "رقم الهوية / الإقامة" : "National ID")</label>
                            <input type="text" class="form-control bg-light border-0" value="@Model.NationalId" readonly>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold small text-muted">@(isRtl ? "المسمى الوظيفي" : "Job Title")</label>
                            <input type="text" class="form-control bg-light border-0" value="@Model.JobTitle" readonly>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold small text-muted">@(isRtl ? "رقم الهاتف" : "Phone")</label>
                            <input type="text" class="form-control bg-light border-0" value="@Model.PhoneNumber" readonly>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Security Section (Mock for UI) -->
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-white py-4 px-4 border-bottom d-flex align-items-center">
                    <i class="fas fa-shield-alt text-gold fa-lg me-3"></i>
                    <div>
                        <h5 class="mb-0 fw-bold text-dark">@(isRtl ? "الأمان" : "Security")</h5>
                    </div>
                </div>
                <div class="card-body p-4 text-center">
                    <p class="text-muted small">لطلب تغيير كلمة المرور أو البيانات الشخصية، يرجى التواصل مع المشرف.</p>
                </div>
            </div>
        </div>
    </div>
</div>