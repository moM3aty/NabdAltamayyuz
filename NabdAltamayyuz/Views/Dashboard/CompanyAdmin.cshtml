@using System.Globalization
@using NabdAltamayyuz.Models
@using System.Security.Claims
@using Microsoft.EntityFrameworkCore
@inject NabdAltamayyuz.Data.ApplicationDbContext _context

@{
    var isRtl = CultureInfo.CurrentCulture.Name.StartsWith("ar");
    ViewData["Title"] = isRtl ? "لوحة تحكم الشركة" : "Company Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";

    // استرجاع بيانات الشركة للمشرف الحالي
    var userId = User.FindFirstValue(ClaimTypes.NameIdentifier);
    var user = _context.Users.Include(u => u.Company).FirstOrDefault(u => u.Id.ToString() == userId);
    var company = user?.Company;

    var attendanceList = ViewBag.AttendanceList as List<Attendance>;
    var pendingTasks = ViewBag.PendingTasks as List<WorkTask>;

    // حساب إحصائيات المهام للرسم البياني - التحقق من null للشركة
    int totalTasks = 0;
    int completedTasks = 0;
    int openTasks = 0;

    if (company != null)
    {
        totalTasks = _context.WorkTasks.Count(t => t.AssignedTo.CompanyId == company.Id);
        completedTasks = _context.WorkTasks.Count(t => t.AssignedTo.CompanyId == company.Id && t.IsCompleted);
        openTasks = totalTasks - completedTasks;
    }
}

<div class="container py-5 animate-fade-in" style="margin-top: 120px;">
    <!-- Company Header -->
    <div class="bg-dark text-white rounded-4 p-4 p-lg-5 mb-5 position-relative overflow-hidden shadow-lg">
        <div class="position-absolute top-0 end-0 opacity-10 p-3">
            <i style="font-size: 50px;margin: 0" class="fas fa-building fa-8x text-gold"></i>
        </div>
        <div class="position-relative z-1">
            <div class="d-flex flex-wrap justify-content-between align-items-end">
                <div>
                    <h6 class="text-gold text-uppercase letter-spacing-1 mb-2">@(isRtl ? "لوحة الإدارة" : "Admin Dashboard")</h6>
                    <h2 class="display-5 fw-bold mb-2">@company?.Name</h2>
                    <p class="text-white-50 mb-0"><i class="fas fa-id-card me-2"></i> @(isRtl ? "السجل التجاري:" : "CR No:") @company?.RegistrationNumber</p>
                </div>
                <div class="text-end mt-4 mt-lg-0">
                    <div class="bg-white bg-opacity-10 rounded-3 p-3 text-center">
                        <small class="text-gold d-block text-uppercase mb-1">@(isRtl ? "الرصيد المتبقي (موظفين)" : "Employees Balance")</small>
                        <h4 class="mb-0 fw-bold">@((company?.AllowedEmployees ?? 0) - (ViewBag.EmployeesCount ?? 0)) / @(company?.AllowedEmployees ?? 0)</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row g-4 mb-5">
        <div class="col-md-3">
            <a href="/Tasks/Create" class="card border-0 shadow-sm hover-lift text-decoration-none h-100 bg-white">
                <div class="card-body text-center p-4">
                    <div class="icon-box bg-primary bg-opacity-10 text-primary rounded-circle mx-auto mb-3 p-3"><i class="fas fa-plus-circle fa-2x"></i></div>
                    <h6 class="fw-bold text-dark">@(isRtl ? "إسناد مهمة" : "Assign Task")</h6>
                </div>
            </a>
        </div>
        <div class="col-md-3">
            <a href="/Employees/Create" class="card border-0 shadow-sm hover-lift text-decoration-none h-100 bg-white">
                <div class="card-body text-center p-4">
                    <div class="icon-box bg-success bg-opacity-10 text-success rounded-circle mx-auto mb-3 p-3"><i class="fas fa-user-plus fa-2x"></i></div>
                    <h6 class="fw-bold text-dark">@(isRtl ? "إضافة موظف" : "Add Employee")</h6>
                </div>
            </a>
        </div>
        <div class="col-md-3">
            <a href="/Attendance" class="card border-0 shadow-sm hover-lift text-decoration-none h-100 bg-white">
                <div class="card-body text-center p-4">
                    <div class="icon-box bg-warning bg-opacity-10 text-warning rounded-circle mx-auto mb-3 p-3"><i class="fas fa-clock fa-2x"></i></div>
                    <h6 class="fw-bold text-dark">@(isRtl ? "سجل الحضور" : "Attendance Log")</h6>
                </div>
            </a>
        </div>
        <div class="col-md-3">
            <a href="/Reports" class="card border-0 shadow-sm hover-lift text-decoration-none h-100 bg-white">
                <div class="card-body text-center p-4">
                    <div class="icon-box bg-info bg-opacity-10 text-info rounded-circle mx-auto mb-3 p-3"><i class="fas fa-file-alt fa-2x"></i></div>
                    <h6 class="fw-bold text-dark">@(isRtl ? "التقارير" : "Reports")</h6>
                </div>
            </a>
        </div>
    </div>

    <div class="row g-4">
        <!-- Attendance Table -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-lg rounded-4 h-100">
                <div class="card-header bg-white py-3 border-bottom d-flex justify-content-between align-items-center">
                    <h6 class="mb-0 fw-bold"><i class="fas fa-fingerprint text-gold me-2"></i> @(isRtl ? "حضور اليوم" : "Today's Attendance")</h6>
                    <span class="badge bg-dark rounded-pill">@DateTime.Now.ToString("dd MMM")</span>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light small">
                                <tr>
                                    <th class="ps-4">@(isRtl ? "الموظف" : "Employee")</th>
                                    <th>@(isRtl ? "وقت الدخول" : "Time In")</th>
                                    <th>@(isRtl ? "الحالة" : "Status")</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (attendanceList != null && attendanceList.Any())
                                {
                                    foreach (var item in attendanceList)
                                    {
                                        <tr>
                                            <td class="ps-4 fw-bold">@item.Employee.FullName</td>
                                            <td class="text-success font-monospace" dir="ltr">@(item.TimeIn?.ToString("hh:mm tt"))</td>
                                            <td><span class="badge bg-success bg-opacity-10 text-success">@(isRtl ? "حاضر" : "Present")</span></td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr><td colspan="3" class="text-center py-4 text-muted">@(isRtl ? "لا يوجد حضور مسجل اليوم" : "No attendance records today")</td></tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tasks Chart & Pending -->
        <div class="col-lg-4">
            <!-- Chart Card -->
            <div class="card border-0 shadow-lg rounded-4 mb-4 overflow-hidden">
                <div class="card-header bg-white py-3 border-bottom">
                    <h6 class="mb-0 fw-bold text-dark"><i class="fas fa-chart-pie me-2 text-gold"></i> @(isRtl ? "إحصائيات المهام" : "Tasks Statistics")</h6>
                </div>
                <div class="card-body d-flex justify-content-center">
                    <div style="width: 200px; height: 200px;">
                        <canvas id="tasksChart"></canvas>
                    </div>
                </div>
                <div class="card-footer bg-light text-center small text-muted">
                    @(isRtl ? "إجمالي المهام:" : "Total Tasks:") @totalTasks
                </div>
            </div>

            <!-- Urgent List -->
            <div class="card border-0 shadow-lg rounded-4 bg-gold-light">
                <div class="card-header bg-transparent py-3 border-bottom border-dark border-opacity-10">
                    <h6 class="mb-0 fw-bold text-dark"><i class="fas fa-exclamation-circle me-2"></i> @(isRtl ? "مهام متأخرة/معلقة" : "Pending/Late Tasks")</h6>
                </div>
                <div class="card-body">
                    @if (pendingTasks != null && pendingTasks.Any())
                    {
                        <ul class="list-group list-group-flush bg-transparent">
                            @foreach (var task in pendingTasks.Take(3))
                            {
                                <li class="list-group-item bg-transparent border-bottom border-dark border-opacity-10 px-0">
                                    <div class="d-flex justify-content-between">
                                        <span class="fw-bold text-dark text-truncate" style="max-width: 60%;">@task.Title</span>
                                        <small class="text-danger" dir="ltr">@task.DueDate.ToString("dd/MM")</small>
                                    </div>
                                    <small class="text-muted">@task.AssignedTo?.FullName</small>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="text-center py-3 text-success small fw-bold">@(isRtl ? "كل المهام منجزة!" : "All tasks completed!")</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", function() {
        var ctxTasks = document.getElementById('tasksChart').getContext('2d');
        var tasksChart = new Chart(ctxTasks, {
            type: 'doughnut',
            data: {
                labels: ['@(isRtl ? "منجز" : "Completed")', '@(isRtl ? "قيد التنفيذ" : "Pending")'],
                datasets: [{
                    data: [@completedTasks, @openTasks],
                    backgroundColor: ['#198754', '#ffc107'],
                    borderWidth: 0
                }]
            },
            options: {
                responsive: true,
                cutout: '75%',
                plugins: { legend: { position: 'bottom' } }
            }
        });
    });
</script>