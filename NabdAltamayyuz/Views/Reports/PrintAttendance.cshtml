@model IEnumerable<NabdAltamayyuz.Models.Attendance>
@using System.Globalization
@{
    Layout = null;
    var isRtl = true; // يمكن تغيير هذا لاحقاً ليدعم التبديل الديناميكي
    // للحصول على اللغة الحالية للترجمة فقط
    var culture = CultureInfo.CurrentCulture.Name.StartsWith("ar") ? "ar" : "en";
    var isArabic = culture == "ar";
}

<!DOCTYPE html>
<html lang="@(isArabic ? "ar" : "en")" dir="@(isArabic ? "rtl" : "ltr")">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(isArabic ? "تقرير الحضور" : "Attendance Report") - @(isArabic ? "نبض التميز الذهبي" : "Golden Pulse")</title>

    <!-- استدعاء خط عربي احترافي (Cairo) -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">

    @if (isArabic)
    {
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.rtl.min.css">
    }
    else
    {
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    }

    <style>
        body {
            font-family: @(isArabic ? "'Cairo', sans-serif" : "'Poppins', sans-serif") !important;
            background: #fff;
            padding: 20px;
            color: #1e293b;
        }

        .report-header {
            border-bottom: 3px solid #D4AF37;
            padding-bottom: 20px;
            margin-bottom: 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .company-name {
            color: #D4AF37;
            font-weight: 700;
            font-size: 24px;
            margin-bottom: 5px;
        }

        .report-title {
            font-size: 20px;
            font-weight: 600;
            color: #0F172A;
        }

        .meta-box {
            font-size: 12px;
            color: #64748b;
            text-align: @(isArabic ? "left" : "right");
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
            font-size: 12px;
        }

        th {
            background-color: #0F172A !important;
            color: #fff !important;
            padding: 12px 10px;
            border: 1px solid #0F172A;
            text-align: center;
            -webkit-print-color-adjust: exact;
        }

        td {
            border: 1px solid #e2e8f0;
            padding: 8px;
            vertical-align: middle;
            text-align: center;
        }

        tr:nth-child(even) {
            background-color: #f8fafc !important;
            -webkit-print-color-adjust: exact;
        }

        .status-badge {
            display: inline-block;
            padding: 4px 12px;
            border-radius: 50px;
            font-weight: 600;
            font-size: 11px;
        }

        .print-btn {
            position: fixed;
            bottom: 30px;
            @(isArabic ? "left: 30px;" : "right: 30px;")
            background: #0F172A;
            color: #D4AF37;
            border: none;
            padding: 10px 25px;
            border-radius: 50px;
            font-weight: bold;
            box-shadow: 0 4px 15px rgba(0,0,0,0.2);
            cursor: pointer;
        }

            .print-btn:hover {
                background: #1e293b;
            }

        @@media print {
            .print-btn {
                display: none;
            }

            body {
                padding: 0;
            }

            @@page {
                size: landscape;
                margin: 1cm;
            }

            th {
                color: white !important;
                background-color: #0F172A !important;
                -webkit-print-color-adjust: exact;
            }
        }
    </style>
</head>
<body onload="window.print()">

    <div class="report-header">
        <div>
            <div class="company-name"><i class="fas fa-gem me-2"></i> @(isArabic ? "نبض التميز الذهبي" : "Nabd AlTamayyuz")</div>
            <div class="report-title">@(isArabic ? "تقرير الحضور والانصراف" : "Attendance Report")</div>
        </div>
        <div class="meta-box">
            <div><strong>@(isArabic ? "تاريخ الطباعة:" : "Print Date:")</strong> @ViewBag.PrintDate.ToString("yyyy-MM-dd HH:mm")</div>
            <div><strong>@(isArabic ? "الفترة:" : "Period:")</strong> @(isArabic ? "من" : "From") @ViewBag.FromDate @(isArabic ? "إلى" : "To") @ViewBag.ToDate</div>
            <div><strong>@(isArabic ? "عدد السجلات:" : "Records Count:")</strong> @Model.Count()</div>
        </div>
    </div>

    <table>
        <thead>
            <tr>
                <th width="15%">@(isArabic ? "التاريخ" : "Date")</th>
                <th width="10%">@(isArabic ? "اليوم" : "Day")</th>
                <th width="20%">@(isArabic ? "الموظف" : "Employee")</th>
                <th width="15%">@(isArabic ? "الوظيفة" : "Job Title")</th>
                <th width="10%">@(isArabic ? "دخول" : "Time In")</th>
                <th width="10%">@(isArabic ? "خروج" : "Time Out")</th>
                <th width="10%">@(isArabic ? "الحالة" : "Status")</th>
                <th width="10%">@(isArabic ? "ملاحظات" : "Notes")</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td style="font-weight:bold;">@item.Date.ToString("yyyy-MM-dd")</td>
                        <!-- Use CultureInfo to display day name based on current language -->
                        <td>@item.Date.ToString("dddd", CultureInfo.CurrentCulture)</td>
                        <td style="@(isArabic ? "text-align:right; padding-right: 10px;" : "text-align:left; padding-left: 10px;") font-weight:600;">@item.Employee.FullName</td>
                        <td>@item.Employee.JobTitle</td>
                        <td dir="ltr" style="font-family: 'Courier New', monospace;">@(item.TimeIn?.ToString("HH:mm") ?? "--")</td>
                        <td dir="ltr" style="font-family: 'Courier New', monospace;">@(item.TimeOut?.ToString("HH:mm") ?? "--")</td>
                        <td>
                            @if (item.TimeIn != null)
                            {
                                <span class="status-badge" style="color:#15803d; background:#dcfce7;">@(isArabic ? "حضور" : "Present")</span>
                            }
                            else
                            {
                                <span class="status-badge" style="color:#b91c1c; background:#fee2e2;">@(isArabic ? "غياب" : "Absent")</span>
                            }
                        </td>
                        <td style="font-size: 11px; color:#64748b;">@item.Notes</td>
                    </tr>
                }
            }
            else
            {
                <tr><td colspan="8" style="text-align:center; padding: 40px; color: #64748b;">@(isArabic ? "لا توجد سجلات حضور في هذه الفترة" : "No attendance records found for this period")</td></tr>
            }
        </tbody>
    </table>

    <div style="margin-top: 50px; display: flex; justify-content: space-between; page-break-inside: avoid;">
        <div style="text-align: center; width: 200px;">
            <p style="margin-bottom: 40px; font-weight: bold; border-bottom: 1px dashed #ccc; padding-bottom: 10px;">@(isArabic ? "اعتماد المشرف" : "Supervisor Approval")</p>
        </div>
        <div style="text-align: @(isArabic ? "left" : "right"); color: #94a3b8; font-size: 11px; align-self: flex-end;">
            @(isArabic ? "تم إصدار هذا المستند إلكترونياً من نظام نبض التميز الذهبي" : "This document was generated electronically by Golden Pulse System") | @DateTime.Now.Year
        </div>
    </div>

    <button class="print-btn" onclick="window.print()">@(isArabic ? "طباعة التقرير" : "Print Report")</button>

</body>
</html>