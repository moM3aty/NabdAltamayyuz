@model IEnumerable<NabdAltamayyuz.Models.Attendance>
@using System.Globalization
@{
    Layout = null;
    var isRtl = true;
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <title>تقرير الحضور والانصراف</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #fff;
            padding: 20px;
            font-size: 14px;
        }

        .report-header {
            border-bottom: 2px solid #D4AF37;
            padding-bottom: 20px;
            margin-bottom: 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo {
            color: #D4AF37;
            font-weight: bold;
            font-size: 24px;
            margin-bottom: 5px;
        }

        .report-title {
            font-size: 18px;
            font-weight: bold;
            color: #333;
        }

        .meta-info {
            text-align: left;
            font-size: 13px;
            color: #666;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th {
            background-color: #0F172A;
            color: white;
            padding: 10px;
            text-align: center;
            font-size: 13px;
        }

        td {
            border: 1px solid #ddd;
            padding: 8px;
            vertical-align: middle;
            text-align: center;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .status-present {
            color: #198754;
            font-weight: bold;
        }

        .status-absent {
            color: #dc3545;
            font-weight: bold;
        }

        .print-btn {
            position: fixed;
            bottom: 30px;
            left: 30px;
            border-radius: 50px;
            padding: 10px 25px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.2);
        }

        @@media print {
            .print-btn {
                display: none;
            }
        }
    </style>
</head>
<body onload="window.print()">

    <div class="report-header">
        <div>
            <div class="logo"> نبض التميز الذهبي</div>
            <div class="report-title">تقرير الحضور والانصراف</div>
        </div>
        <div class="meta-info">
            <div><strong>تاريخ الاستخراج:</strong> @DateTime.Now.ToString("yyyy-MM-dd HH:mm")</div>
            <div><strong>الفترة:</strong> @ViewBag.FromDate إلى @ViewBag.ToDate</div>
            <div><strong>السجلات:</strong> @Model.Count()</div>
        </div>
    </div>

    <table>
        <thead>
            <tr>
                <th width="15%">التاريخ</th>
                <th width="10%">اليوم</th>
                <th width="20%">الموظف</th>
                <th width="15%">الوظيفة</th>
                <th width="10%">دخول</th>
                <th width="10%">خروج</th>
                <th width="10%">الحالة</th>
                <th width="10%">ملاحظات</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Date.ToString("yyyy-MM-dd")</td>
                        <td>@item.Date.ToString("dddd", new CultureInfo("ar-SA"))</td>
                        <td style="text-align:right; padding-right:10px;">@item.Employee.FullName</td>
                        <td>@item.Employee.JobTitle</td>
                        <td dir="ltr">@(item.TimeIn?.ToString("hh:mm tt") ?? "--")</td>
                        <td dir="ltr">@(item.TimeOut?.ToString("hh:mm tt") ?? "--")</td>
                        <td>
                            @if (item.TimeIn != null)
                            {
                                <span class="status-present">حضور</span>
                            }
                            else
                            {
                                <span class="status-absent">غياب</span>
                            }
                        </td>
                        <td style="font-size: 11px;">@item.Notes</td>
                    </tr>
                }
            }
            else
            {
                <tr><td colspan="8" style="text-align:center; padding: 30px; color: #777;">لا توجد سجلات في هذه الفترة</td></tr>
            }
        </tbody>
    </table>

    <div style="margin-top: 40px; border-top: 1px solid #eee; pt-3; text-align: center; color: #999; font-size: 11px;">
        تم إصدار هذا التقرير آلياً من نظام نبض التميز الذهبي للإدارة والتشغيل
    </div>

    <button class="btn btn-dark print-btn" onclick="window.print()">طباعة التقرير</button>

</body>
</html>