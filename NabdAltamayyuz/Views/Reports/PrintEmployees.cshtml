@model IEnumerable<NabdAltamayyuz.Models.ApplicationUser>
@using System.Globalization
@{
    Layout = null;
    var culture = CultureInfo.CurrentCulture.Name.StartsWith("ar") ? "ar" : "en";
    var isArabic = culture == "ar";
}

<!DOCTYPE html>
<html lang="@culture" dir="@(isArabic ? "rtl" : "ltr")">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(isArabic ? "تقرير بيانات الموظفين" : "Employees Data Report") - @(isArabic ? "نبض التميز الذهبي" : "Golden Pulse")</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">

    @if (isArabic)
    {
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.rtl.min.css">
    }
    else
    {
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    }

    <style>
        body {
            font-family: @(isArabic ? "'Cairo', sans-serif" : "'Poppins', sans-serif") !important;
            background: #fff;
            padding: 20px;
            color: #1e293b;
        }

        .report-header {
            border-bottom: 3px solid #D4AF37;
            padding-bottom: 20px;
            margin-bottom: 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .company-name {
            color: #D4AF37;
            font-weight: 700;
            font-size: 24px;
            margin-bottom: 5px;
        }

        .report-title {
            font-size: 20px;
            font-weight: 600;
            color: #0F172A;
        }

        .meta-box {
            font-size: 12px;
            color: #64748b;
            text-align: @(isArabic ? "left" : "right");
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
            font-size: 12px;
        }

        th {
            background-color: #0F172A !important;
            color: #fff !important;
            padding: 10px;
            border: 1px solid #0F172A;
            text-align: center;
            -webkit-print-color-adjust: exact;
        }

        td {
            border: 1px solid #e2e8f0;
            padding: 8px;
            text-align: center;
            vertical-align: middle;
        }

        tr:nth-child(even) {
            background-color: #f8fafc !important;
            -webkit-print-color-adjust: exact;
        }

        .print-btn {
            position: fixed;
            bottom: 30px;
            @(isArabic ? "left: 30px;" : "right: 30px;")
            background: #0F172A;
            color: #D4AF37;
            border: none;
            padding: 10px 25px;
            border-radius: 50px;
            cursor: pointer;
            font-weight: bold;
        }

        /* Custom alignment for name column */
        .text-start-custom {
            text-align: @(isArabic ? "right" : "left") !important;
            padding- @(isArabic ? "right" : "left") : 10px;
        }

        .font-mono {
            font-family: 'Courier New', monospace;
        }

        @@media print {
            .print-btn {
                display: none;
            }

            body {
                padding: 0;
            }
        }
    </style>
</head>
<body onload="window.print()">

    <div class="report-header">
        <div>
            <div class="company-name">@(isArabic ? "نبض التميز الذهبي" : "Nabd AlTamayyuz")</div>
            <div class="report-title">@(isArabic ? "سجل بيانات الموظفين" : "Employees Data Record")</div>
        </div>
        <div class="meta-box">
            <div><strong>@(isArabic ? "تاريخ الطباعة:" : "Print Date:")</strong> @DateTime.Now.ToString("yyyy-MM-dd HH:mm")</div>
            <div><strong>@(isArabic ? "عدد الموظفين:" : "Employees Count:")</strong> @Model.Count()</div>
        </div>
    </div>

    <table>
        <thead>
            <tr>
                <th width="20%">@(isArabic ? "الاسم الكامل" : "Full Name")</th>
                <th width="15%">@(isArabic ? "المسمى الوظيفي" : "Job Title")</th>
                <th width="15%">@(isArabic ? "رقم الهوية / الإقامة" : "National ID / Iqama")</th>
                <th width="15%">@(isArabic ? "رقم الهاتف" : "Phone Number")</th>
                <th width="20%">@(isArabic ? "البريد الإلكتروني" : "Email")</th>
                <th width="15%">@(isArabic ? "الشركة / الفرع" : "Company / Branch")</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-start-custom fw-bold">@item.FullName</td>
                    <td>@item.JobTitle</td>
                    <td class="font-mono">@item.NationalId</td>
                    <td class="font-mono" dir="ltr">@item.PhoneNumber</td>
                    <td class="font-mono">@item.Email</td>
                    <td>@(item.Company?.Name ?? "-")</td>
                </tr>
            }
        </tbody>
    </table>

    <div style="margin-top: 40px; border-top: 1px solid #ddd; padding-top: 10px; font-size: 11px; color: #64748b; text-align: center;">
        @(isArabic ? "تم استخراج هذا التقرير من نظام نبض التميز الذهبي للإدارة المتكاملة." : "This report was generated from Nabd AlTamayyuz Golden System for Integrated Management.")
    </div>

    <button class="print-btn" onclick="window.print()">@(isArabic ? "طباعة التقرير" : "Print Report")</button>
</body>
</html>