@model IEnumerable<NabdAltamayyuz.Models.Attendance>
@using System.Globalization

@{
    ViewData["Title"] = "سجل الحضور والانصراف";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var isRtl = CultureInfo.CurrentCulture.Name.StartsWith("ar");
}

<!-- تنسيقات خاصة بالطباعة -->
<style>
    @@media print {
        @@page { size: A4 landscape; margin: 1cm; } /* الطباعة بالعرض */
        body { background-color: white !important; font-family: 'Cairo', sans-serif; -webkit-print-color-adjust: exact; }
        
        /* إخفاء العناصر غير الضرورية */
        .premium-navbar, footer, .btn, .card-header, .card-footer, form, .alert, .no-print { display: none !important; }
        
        /* تنسيق الحاوية */
        .container { margin-top: 0 !important; padding: 0 !important; max-width: 100% !important; width: 100% !important; }
        .card { border: none !important; box-shadow: none !important; }
        .card-body { padding: 0 !important; }
        .animate-fade-in { animation: none !important; opacity: 1 !important; transform: none !important; }

        /* إظهار ترويسة التقرير */
        .print-header { display: block !important; margin-bottom: 20px; border-bottom: 2px solid #D4AF37; padding-bottom: 10px; }
        
        /* تحسين الجدول */
        .table-responsive { overflow: visible !important; }
        table { width: 100% !important; border-collapse: collapse !important; font-size: 12px; }
        th { background-color: #0F172A !important; color: white !important; border: 1px solid #000 !important; padding: 5px !important; }
        td { border: 1px solid #ccc !important; padding: 5px !important; color: black !important; }
        
        /* تحسين البادجات في الطباعة */
        .badge { border: 1px solid #000; background: transparent !important; color: black !important; padding: 2px 5px; }
    }
    .print-header { display: none; } /* مخفي في الشاشة العادية */
</style>

<div class="container py-5 animate-fade-in" style="margin-top: 120px;">
    
    <!-- ترويسة تظهر فقط في الطباعة -->
    <div class="print-header text-center">
        <div class="row align-items-center">
            <div class="col-4 text-end">
                <small>تاريخ الطباعة: @DateTime.Now.ToString("yyyy-MM-dd HH:mm")</small>
            </div>
            <div class="col-4">
                <h3 class="fw-bold mb-1">نبض التميز الذهبي</h3>
                <h5 class="text-muted">تقرير الحضور والانصراف</h5>
            </div>
            <div class="col-4 text-start">
                <small>المستخدم: @User.Identity.Name</small>
            </div>
        </div>
    </div>

    <!-- Header (Screen) -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4 gap-3 no-print">
        <div>
            <h3 class="fw-bold text-dark mb-1">
                <i class="fas fa-clipboard-list text-gold me-2"></i> @(isRtl ? "سجل الحضور والانصراف" : "Attendance Sheet")
            </h3>
            <p class="text-muted small mb-0">@(isRtl ? "عرض ومتابعة سجلات دوام الموظفين" : "View and track employee attendance records")</p>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-gold bg-dark text-gold fw-bold shadow-sm rounded-pill px-4" data-bs-toggle="modal" data-bs-target="#manualEntryModal">
                <i class="fas fa-plus me-2"></i> @(isRtl ? "تسجيل يدوي" : "Manual Entry")
            </button>
            <button class="btn btn-outline-secondary shadow-sm rounded-pill px-4" onclick="window.print()">
                <i class="fas fa-print me-2"></i> @(isRtl ? "طباعة" : "Print")
            </button>
        </div>
    </div>

    <!-- Filters -->
    <div class="card border-0 shadow-lg mb-4 bg-white rounded-4 overflow-hidden no-print">
        <div class="card-header bg-white py-3 border-bottom-0">
            <h6 class="mb-0 fw-bold text-dark"><i class="fas fa-filter text-gold me-2"></i> @(isRtl ? "أدوات البحث والفلترة" : "Search & Filters")</h6>
        </div>
        <div class="card-body p-4 pt-0">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label class="form-label fw-bold small text-muted">@(isRtl ? "اسم الموظف" : "Employee Name")</label>
                    <div class="input-group shadow-sm">
                        <span class="input-group-text bg-light border-end-0 text-gold"><i class="fas fa-search"></i></span>
                        <input type="text" name="searchEmployee" class="form-control bg-light border-start-0" placeholder="@(isRtl ? "بحث بالاسم..." : "Search by name...")" value="@Context.Request.Query["searchEmployee"]">
                    </div>
                </div>
                <div class="col-md-3">
                    <label class="form-label fw-bold small text-muted">@(isRtl ? "من تاريخ" : "From Date")</label>
                    <div class="input-group shadow-sm">
                        <span class="input-group-text bg-light border-end-0 text-gold"><i class="far fa-calendar-alt"></i></span>
                        <input type="date" name="startDate" class="form-control bg-light border-start-0" value="@ViewBag.StartDate">
                    </div>
                </div>
                <div class="col-md-3">
                    <label class="form-label fw-bold small text-muted">@(isRtl ? "إلى تاريخ" : "To Date")</label>
                    <div class="input-group shadow-sm">
                        <span class="input-group-text bg-light border-end-0 text-gold"><i class="far fa-calendar-alt"></i></span>
                        <input type="date" name="endDate" class="form-control bg-light border-start-0" value="@ViewBag.EndDate">
                    </div>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-gold w-100 fw-bold rounded-pill text-dark shadow-sm">@(isRtl ? "عرض النتائج" : "Apply Filter")</button>
                </div>
            </form>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success border-0 bg-success bg-opacity-10 text-success rounded-3 shadow-sm mb-4 fade show no-print">
            <i class="fas fa-check-circle me-2"></i> @TempData["Success"]
        </div>
    }

    <!-- Attendance Table -->
    <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0 text-center">
                    <thead class="bg-dark text-white">
                        <tr>
                            <th class="py-3 px-3 text-start">@(isRtl ? "الموظف" : "Employee")</th>
                            <th class="py-3">@(isRtl ? "التاريخ" : "Date")</th>
                            <th class="py-3">@(isRtl ? "وقت الدخول" : "Time In")</th>
                            <th class="py-3">@(isRtl ? "وقت الخروج" : "Time Out")</th>
                            <th class="py-3">@(isRtl ? "ساعات العمل" : "Work Hours")</th>
                            <th class="py-3">@(isRtl ? "الحالة" : "Status")</th>
                            <th class="py-3 text-start">@(isRtl ? "ملاحظات" : "Notes")</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-start px-3">
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-circle bg-light text-gold rounded-circle d-flex align-items-center justify-content-center me-3 border border-gold no-print" style="width: 40px; height: 40px;">
                                                <span class="fw-bold">@item.Employee.FullName.Substring(0, 1).ToUpper()</span>
                                            </div>
                                            <div>
                                                <div class="fw-bold text-dark">@item.Employee.FullName</div>
                                                <small class="text-muted no-print" style="font-size: 0.75rem;">@item.Employee.JobTitle</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center justify-content-center text-muted">
                                            <i class="far fa-calendar me-2 small no-print"></i>
                                            <span class="fw-bold">@item.Date.ToString("yyyy-MM-dd")</span>
                                        </div>
                                    </td>
                                    <td class="text-success ltr font-monospace fw-bold">@(item.TimeIn?.ToString("hh:mm tt") ?? "--")</td>
                                    <td class="text-danger ltr font-monospace fw-bold">@(item.TimeOut?.ToString("hh:mm tt") ?? "--")</td>
                                    <td>
                                        @if (item.TimeIn.HasValue && item.TimeOut.HasValue)
                                        {
                                            var hours = (item.TimeOut.Value - item.TimeIn.Value).TotalHours;
                                            <span class="badge bg-light text-dark border">@hours.ToString("0.0") @(isRtl ? "ساعة" : "hrs")</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">--</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.TimeIn == null)
                                        {
                                            <span class="badge bg-danger bg-opacity-10 text-danger px-3 py-2 rounded-pill">@(isRtl ? "غياب" : "Absent")</span>
                                        }
                                        else if (item.TimeOut == null)
                                        {
                                            <span class="badge bg-warning bg-opacity-10 text-dark px-3 py-2 rounded-pill">@(isRtl ? "جاري العمل" : "Working")</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success bg-opacity-10 text-success px-3 py-2 rounded-pill">@(isRtl ? "مكتمل" : "Completed")</span>
                                        }
                                        
                                        @if(item.IsManualEntry)
                                        {
                                            <span class="ms-1 text-info no-print" data-bs-toggle="tooltip" title="@(isRtl ? "إدخال يدوي بواسطة المدير" : "Manual Entry by Admin")">
                                                <i class="fas fa-edit"></i>
                                            </span>
                                        }
                                    </td>
                                    <td class="text-start text-muted small">@item.Notes</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="py-5 text-center text-muted">
                                    <div class="opacity-50 mb-3 no-print"><i class="fas fa-folder-open fa-3x text-gold"></i></div>
                                    <p class="mb-0 fw-bold">@(isRtl ? "لا توجد سجلات للعرض حالياً" : "No records found matching your criteria")</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer bg-white border-top py-3 d-flex justify-content-between align-items-center no-print">
            <small class="text-muted">@(isRtl ? $"إجمالي السجلات: {Model?.Count() ?? 0}" : $"Total Records: {Model?.Count() ?? 0}")</small>
            <!-- Pagination could go here -->
        </div>
    </div>
</div>

<!-- Manual Entry Modal (Same as before) -->
<div class="modal fade" id="manualEntryModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-4 overflow-hidden">
            <div class="modal-header bg-dark text-white border-0 px-4 py-3">
                <h5 class="modal-title fw-bold"><i class="fas fa-pen-alt text-gold me-2"></i> @(isRtl ? "تسجيل حضور يدوي" : "Manual Attendance Entry")</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form action="/Attendance/ManualEntry" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body p-4">
                    <div class="alert alert-warning border-0 bg-warning bg-opacity-10 text-dark small mb-4 rounded-3 d-flex">
                        <i class="fas fa-info-circle me-2 mt-1 text-warning"></i> 
                        <div>@(isRtl ? "يستخدم هذا النموذج لتعديل أو إضافة سجل حضور في حال نسيان الموظف أو الأعذار." : "Use this form to correct or add records for missed punches or excuses.")</div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold small text-muted">@(isRtl ? "رقم الموظف (ID)" : "Employee ID")</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0 text-gold"><i class="fas fa-id-badge"></i></span>
                            <input type="number" name="employeeId" class="form-control bg-light border-start-0" required placeholder="Employee ID">
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold small text-muted">@(isRtl ? "التاريخ" : "Date")</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0 text-gold"><i class="far fa-calendar-alt"></i></span>
                            <input type="date" name="date" class="form-control bg-light border-start-0" required value="@DateTime.Now.ToString("yyyy-MM-dd")">
                        </div>
                    </div>

                    <div class="row g-3 mb-3">
                        <div class="col-6">
                            <label class="form-label fw-bold small text-muted">@(isRtl ? "وقت الدخول" : "Time In")</label>
                            <input type="time" name="timeIn" class="form-control bg-light" required>
                        </div>
                        <div class="col-6">
                            <label class="form-label fw-bold small text-muted">@(isRtl ? "وقت الخروج" : "Time Out")</label>
                            <input type="time" name="timeOut" class="form-control bg-light">
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold small text-muted">@(isRtl ? "ملاحظات / سبب التعديل" : "Notes / Reason")</label>
                        <textarea name="notes" class="form-control bg-light" rows="3" placeholder="@(isRtl ? "مثال: نسيان تسجيل الدخول، إذن خارجي..." : "e.g. Forgot to punch in...")"></textarea>
                    </div>
                </div>
                <div class="modal-footer border-0 px-4 pb-4">
                    <button type="button" class="btn btn-light rounded-pill px-4" data-bs-dismiss="modal">@(isRtl ? "إلغاء" : "Cancel")</button>
                    <button type="submit" class="btn btn-gold bg-dark text-gold fw-bold rounded-pill px-4 shadow-sm hover-scale">
                        <i class="fas fa-save me-2"></i> @(isRtl ? "حفظ السجل" : "Save Record")
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>