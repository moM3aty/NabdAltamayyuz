@model IEnumerable<NabdAltamayyuz.Controllers.AttendanceController.AttendanceViewModel>
@using System.Globalization

@{
    var isRtl = CultureInfo.CurrentCulture.Name.StartsWith("ar");
    ViewData["Title"] = isRtl ? "كشف الحضور" : "Attendance Sheet";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var dateString = ViewBag.SelectedDate as string;
    // Parsing date to show correct day name based on current culture
    DateTime parsedDate = DateTime.Parse(dateString);
    var dayName = parsedDate.ToString("dddd");
}

<style>
    .time-input {
        border: 1px solid transparent;
        background: transparent;
        width: 100px;
        text-align: center;
        font-family: monospace;
        color: #198754;
    }

        .time-input:hover, .time-input:focus {
            border: 1px solid #D4AF37;
            background: #fff;
            outline: none;
            border-radius: 4px;
        }

        .time-input.out {
            color: #dc3545;
        }
</style>

<div class="container py-5 animate-fade-in" style="margin-top: 120px;">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4 no-print">
        <div>
            <h3 class="fw-bold text-dark mb-1">
                <i class="fas fa-clipboard-list text-gold me-2"></i> @(isRtl ? "كشف الحضور الشامل" : "Comprehensive Attendance Sheet")
            </h3>
            <p class="text-muted small mb-0">@dayName | @parsedDate.ToString("dd MMMM yyyy")</p>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-outline-secondary rounded-pill px-3" onclick="window.print()">
                <i class="fas fa-print me-1"></i> @(isRtl ? "طباعة" : "Print")
            </button>
            <div class="dropdown">
                <button class="btn btn-gold bg-dark text-gold rounded-pill px-4 dropdown-toggle" type="button" data-bs-toggle="dropdown">
                    <i class="fas fa-pen me-2"></i> @(isRtl ? "إجراءات" : "Actions")
                </button>
                <ul class="dropdown-menu shadow-lg border-0">
                    <li><a class="dropdown-item" href="#" onclick="enableEditMode()">@(isRtl ? "تفعيل التعديل السريع" : "Enable Quick Edit")</a></li>
                    <li><a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#manualEntryModal">@(isRtl ? "تسجيل موظف جديد" : "Register New Employee")</a></li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="card border-0 shadow-sm rounded-4 mb-4 bg-white no-print">
        <div class="card-body p-3">
            <form method="get" class="row g-2 align-items-center">
                <div class="col-md-3">
                    <label class="small text-muted fw-bold ms-1">@(isRtl ? "الشركة / الفرع" : "Company / Branch")</label>
                    <select name="companyId" class="form-select bg-light border-0" asp-items="ViewBag.Companies" onchange="this.form.submit()">
                        <option value="">@(isRtl ? "-- عرض الكل --" : "-- Show All --")</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="small text-muted fw-bold ms-1">@(isRtl ? "التاريخ" : "Date")</label>
                    <input type="date" name="date" class="form-control bg-light border-0" value="@dateString" onchange="this.form.submit()">
                </div>
                <div class="col-md-4">
                    <label class="small text-muted fw-bold ms-1">@(isRtl ? "بحث موظف" : "Search Employee")</label>
                    <input type="text" name="searchString" class="form-control bg-light border-0" placeholder="@(isRtl ? "الاسم..." : "Name...")" value="@ViewBag.CurrentSearch">
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-dark w-100 rounded-pill mt-4">@(isRtl ? "عرض" : "View")</button>
                </div>
            </form>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success border-0 bg-success bg-opacity-10 text-success rounded-3 mb-4"><i class="fas fa-check-circle me-2"></i> @TempData["Success"]</div>
    }

    <!-- Sheet Table -->
    <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
        <div class="card-header bg-dark text-white py-3 d-flex justify-content-between align-items-center">
            <h6 class="mb-0 text-gold">@(isRtl ? "سجل حركات الحضور والانصراف (يمكن التعديل مباشرة)" : "Attendance Records Log (Editable)")</h6>
            <span class="badge bg-gold text-dark">@Model.Count() @(isRtl ? "موظف" : "Employees")</span>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0 text-center">
                    <thead class="bg-light text-muted small text-uppercase">
                        <tr>
                            <th class="ps-4 text-start">@(isRtl ? "الموظف" : "Employee")</th>
                            <th>@(isRtl ? "الشركة / الفرع" : "Company / Branch")</th>
                            <th>@(isRtl ? "دخول (08:30 ص)" : "Time In")</th>
                            <th>@(isRtl ? "خروج (04:30 م)" : "Time Out")</th>
                            <th>@(isRtl ? "الساعات" : "Hours")</th>
                            <th>@(isRtl ? "الحالة" : "Status")</th>
                            <th>@(isRtl ? "ملاحظات" : "Notes")</th>
                            <th class="no-print">@(isRtl ? "حفظ" : "Save")</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr id="row-@item.EmployeeId">
                                    <form action="/Attendance/ManualEntry" method="post" id="form-@item.EmployeeId">
                                        <input type="hidden" name="employeeId" value="@item.EmployeeId" />
                                        <input type="hidden" name="date" value="@dateString" />

                                    <td class="text-start ps-4">
                                        <div class="fw-bold text-dark">@item.EmployeeName</div>
                                        <small class="text-muted">@item.JobTitle</small>
                                    </td>
                                    <td class="small text-muted">@item.CompanyName</td>
                                    <td>
                                        <input type="time" name="timeIn" class="time-input"
                                               value="@(item.TimeIn?.ToString("HH:mm"))" onchange="markChanged(@item.EmployeeId)">
                                    </td>
                                    <td>
                                        <input type="time" name="timeOut" class="time-input out"
                                               value="@(item.TimeOut?.ToString("HH:mm"))" onchange="markChanged(@item.EmployeeId)">
                                    </td>
                                    <td>
                                        @if (item.TimeIn.HasValue && item.TimeOut.HasValue)
                                        {
                                            <span class="badge bg-light text-dark border">
                                                @((item.TimeOut.Value - item.TimeIn.Value).TotalHours.ToString("0.0"))
                                            </span>
                                        }
                                        else
                                        {

                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.IsPresent)
                                        {
                                            if (item.TimeOut == null)
                                            {
                                                <span class="badge bg-warning text-dark rounded-pill">@(isRtl ? "جاري" : "Active")</span>
                                            }
                                            else
                                            {

                                                <span class="badge bg-success rounded-pill">@(isRtl ? "مكتمل" : "Completed")</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger bg-opacity-10 text-danger rounded-pill">@(isRtl ? "غياب" : "Absent")</span>
                                        }
                                    </td>
                                    <td>
                                        <input type="text" name="notes" class="form-control form-control-sm border-0 bg-transparent"
                                               placeholder="@(isRtl ? "ملاحظات..." : "Notes...")" value="@item.Notes" onchange="markChanged(@item.EmployeeId)">
                                    </td>
                                    <td class="no-print">
                                        <button type="submit" class="btn btn-sm btn-gold text-dark fw-bold rounded-circle shadow-sm"
                                                style="display:none;" id="btn-save-@item.EmployeeId" title="@(isRtl ? "حفظ" : "Save")">
                                            <i class="fas fa-check"></i>
                                        </button>
                                    </td>
                                    @Html.AntiForgeryToken()
                                    </form>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr><td colspan="8" class="py-5 text-muted">@(isRtl ? "لا يوجد موظفين" : "No employees found")</td></tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Manual Entry Modal -->
<div class="modal fade" id="manualEntryModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4 border-0">
            <div class="modal-header bg-dark text-gold">
                <h5 class="modal-title">@(isRtl ? "تسجيل حضور يدوي" : "Manual Attendance Entry")</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form action="/Attendance/ManualEntry" method="post">
                <div class="modal-body">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="date" value="@dateString">

                    <p class="text-muted small">@(isRtl ? "يمكنك التعديل مباشرة في الجدول أعلاه، أو استخدام هذا النموذج لإضافة ملاحظات خاصة." : "You can edit directly in the table above, or use this form for special notes.")</p>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function markChanged(id) {
        document.getElementById('btn-save-' + id).style.display = 'inline-block';
        document.getElementById('row-' + id).style.backgroundColor = '#fffbf0';
    }

    function enableEditMode() {
        var msg = '@(isRtl ? "وضع التعديل السريع مفعل. قم بتغيير الوقت في الجدول وسيظهر زر الحفظ." : "Quick edit mode enabled. Change time in table and save button will appear.")';
        alert(msg);
    }
</script>