    <div class="position-absolute start-0 bottom-0 opacity-10">
        <i class="fas fa-ruler-combined fa-10x" style="transform: rotate(15deg) translate(-20%, 20%);"></i>
    </div>

    <div class="container position-relative z-1">
        <div class="text-center mb-5">
