@model NabdAltamayyuz.Models.Company
@using System.Globalization
@{
    var isRtl = CultureInfo.CurrentCulture.Name.StartsWith("ar");
    ViewData["Title"] = isRtl ? "إضافة شركة جديدة" : "Add New Company";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5 animate-fade-in" style="margin-top: 100px;">
    <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
        <div class="card-header bg-dark text-white py-3 px-4 d-flex justify-content-between align-items-center">
            <h5 class="mb-0 fw-bold text-gold"><i class="fas fa-building me-2"></i> @(isRtl ? "إضافة شركة متعاقدة" : "Add Contracted Company")</h5>
            <a href="/Dashboard/SuperAdmin" class="btn btn-sm btn-outline-light rounded-pill">@(isRtl ? "إلغاء" : "Cancel")</a>
        </div>
        <div class="card-body p-4 bg-white">
            <form asp-action="Create" enctype="multipart/form-data" method="post">
                <h6 class="text-gold fw-bold mb-3 border-bottom pb-2">@(isRtl ? "البيانات الأساسية" : "Basic Information")</h6>
                <div class="row g-3 mb-4">
                    <div class="col-md-4">
                        <label asp-for="Name" class="form-label small fw-bold">@(isRtl ? "اسم الشركة" : "Company Name")</label>
                        <input asp-for="Name" class="form-control bg-light" required />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="UnifiedNumber" class="form-label small fw-bold">@(isRtl ? "الرقم الموحد" : "Unified Number")</label>
                        <input asp-for="UnifiedNumber" class="form-control bg-light" />
                    </div>
                    <div class="col-md-4">
                        <label asp-for="RegistrationNumber" class="form-label small fw-bold">@(isRtl ? "رقم السجل التجاري" : "Commercial Registration No.")</label>
                        <input asp-for="RegistrationNumber" class="form-control bg-light" />
                    </div>
                    <div class="col-md-4">
                        <label asp-for="TaxNumber" class="form-label small fw-bold">@(isRtl ? "الرقم الضريبي" : "Tax Number")</label>
                        <input asp-for="TaxNumber" class="form-control bg-light" />
                    </div>
                    <div class="col-md-4">
                        <label asp-for="NationalAddressShortCode" class="form-label small fw-bold">@(isRtl ? "العنوان الوطني (مختصر)" : "National Address (Short)")</label>
                        <input asp-for="NationalAddressShortCode" class="form-control bg-light" />
                    </div>
                    <div class="col-md-4">
                        <label asp-for="ResponsiblePerson" class="form-label small fw-bold">@(isRtl ? "اسم المسؤول" : "Responsible Person")</label>
                        <input asp-for="ResponsiblePerson" class="form-control bg-light" />
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Email" class="form-label small fw-bold">@(isRtl ? "البريد الإلكتروني (دخول المدير)" : "Email (Manager Login)")</label>
                        <input asp-for="Email" class="form-control bg-light" type="email" />
                    </div>
                    <div class="col-md-4">
                        <label asp-for="PhoneNumber" class="form-label small fw-bold">@(isRtl ? "رقم التواصل" : "Contact Number")</label>
                        <input asp-for="PhoneNumber" class="form-control bg-light" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label small fw-bold text-dark">@(isRtl ? "كلمة المرور للمدير" : "Manager Password")</label>
                        <input type="text" name="adminPassword" class="form-control bg-white border-gold" placeholder="@(isRtl ? "اتركها فارغة لتعيين الافتراضي (123456)" : "Leave empty to set default (123456)")" />
                    </div>
                </div>

                <h6 class="text-gold fw-bold mb-3 border-bottom pb-2 pt-2">@(isRtl ? "بيانات الاشتراك والحدود" : "Subscription & Limits")</h6>
                <div class="row g-3 mb-4">
                    <div class="col-md-3">
                        <label asp-for="SubscriptionStartDate" class="form-label small fw-bold">@(isRtl ? "بداية الاشتراك" : "Subscription Start")</label>
                        <input asp-for="SubscriptionStartDate" class="form-control bg-light" type="date" />
                    </div>
                    <div class="col-md-3">
                        <label asp-for="SubscriptionEndDate" class="form-label small fw-bold">@(isRtl ? "نهاية الاشتراك" : "Subscription End")</label>
                        <input asp-for="SubscriptionEndDate" class="form-control bg-light" type="date" />
                    </div>
                    <div class="col-md-3">
                        <label asp-for="PaymentTerm" class="form-label small fw-bold">@(isRtl ? "نظام السداد" : "Payment Term")</label>
                        <select asp-for="PaymentTerm" class="form-select bg-light" asp-items="Html.GetEnumSelectList<NabdAltamayyuz.Models.PaymentTerm>()"></select>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="NotificationDaysBeforeExpiry" class="form-label small fw-bold">@(isRtl ? "تنبيه قبل (يوم)" : "Alert Before (Days)")</label>
                        <input asp-for="NotificationDaysBeforeExpiry" class="form-control bg-light" type="number" value="30" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="AllowedSubAccounts" class="form-label small fw-bold">@(isRtl ? "عدد الحسابات الفرعية المسموحة" : "Allowed Sub-Accounts")</label>
                        <input asp-for="AllowedSubAccounts" class="form-control bg-light" type="number" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="AllowedEmployees" class="form-label small fw-bold">@(isRtl ? "عدد الموظفين المسموح" : "Allowed Employees")</label>
                        <input asp-for="AllowedEmployees" class="form-control bg-light" type="number" />
                    </div>
                </div>

                <h6 class="text-gold fw-bold mb-3 border-bottom pb-2 pt-2">@(isRtl ? "البيانات المالية (تلقائي)" : "Financials (Auto)")</h6>
                <div class="row g-3 mb-4 bg-light p-3 rounded-3">
                    <div class="col-md-4">
                        <label asp-for="PricePerEmployee" class="form-label small fw-bold">@(isRtl ? "سعر الاشتراك للموظف (بدون ضريبة)" : "Price Per Employee (Excl. Tax)")</label>
                        <div class="input-group">
                            <input asp-for="PricePerEmployee" class="form-control" type="number" step="0.01" id="priceInput" />
                            <span class="input-group-text">SAR</span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="TaxRate" class="form-label small fw-bold">@(isRtl ? "نسبة الضريبة %" : "Tax Rate %")</label>
                        <input asp-for="TaxRate" class="form-control" type="number" step="0.01" value="15" id="taxInput" readonly />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label small fw-bold text-success">@(isRtl ? "الإجمالي (شامل الضريبة)" : "Total (Incl. Tax)")</label>
                        <input type="text" class="form-control fw-bold text-success" id="totalOutput" readonly />
                    </div>
                </div>

                <div class="mb-4">
                    <label class="form-label small fw-bold">@(isRtl ? "مرفقات (العقد/السجل)" : "Attachments (Contract/CR)")</label>
                    <input type="file" name="attachment" class="form-control" />
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-gold bg-dark text-gold fw-bold px-5 rounded-pill shadow-sm">
                        <i class="fas fa-save me-2"></i> @(isRtl ? "حفظ الشركة" : "Save Company")
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // حسبة تلقائية للإجمالي
        const priceInput = document.getElementById('priceInput');
        const taxInput = document.getElementById('taxInput');
        const totalOutput = document.getElementById('totalOutput');

        function calculateTotal() {
            const price = parseFloat(priceInput.value) || 0;
            const tax = parseFloat(taxInput.value) || 0;
            const total = price + (price * (tax / 100));
            totalOutput.value = total.toFixed(2);
        }

        if(priceInput) {
            priceInput.addEventListener('input', calculateTotal);
        }
    </script>
}