@model NabdAltamayyuz.Models.Company
@using System.Globalization

@{
    ViewData["Title"] = "إضافة فرع جديد";
    var isRtl = CultureInfo.CurrentCulture.Name.StartsWith("ar");
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5 animate-fade-in" style="margin-top: 120px;">
    <div class="row justify-content-center">
        <div class="col-md-9">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-dark text-white py-3 px-4 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold text-gold"><i class="fas fa-code-branch me-2"></i> @(isRtl ? "إضافة فرع / شركة تابعة" : "Add Sub-Company")</h5>
                    <a href="/Companies" class="btn btn-sm btn-outline-light rounded-pill">@(isRtl ? "إلغاء" : "Cancel")</a>
                </div>
                <div class="card-body p-4 bg-white">
                    <form asp-action="CreateSub" enctype="multipart/form-data" method="post">
                        <div class="alert alert-info border-0 bg-info bg-opacity-10 small mb-4">
                            <i class="fas fa-info-circle me-2"></i>
                            @(isRtl ? "سيتم ربط هذا الحساب بحساب شركتك الرئيسي، وستكون مدة الاشتراك مرتبطة بالحساب الرئيسي." : "This account will be linked to your main company account.")
                        </div>

                        <h6 class="text-gold fw-bold mb-3 border-bottom pb-2">البيانات الأساسية للفرع</h6>
                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label asp-for="Name" class="form-label small fw-bold">اسم الفرع / الشركة</label>
                                <input asp-for="Name" class="form-control bg-light" required />
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="RegistrationNumber" class="form-label small fw-bold">رقم السجل التجاري</label>
                                <input asp-for="RegistrationNumber" class="form-control bg-light" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label small fw-bold">البريد الإلكتروني للفرع</label>
                                <input asp-for="Email" class="form-control bg-light" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="PhoneNumber" class="form-label small fw-bold">رقم التواصل</label>
                                <input asp-for="PhoneNumber" class="form-control bg-light" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ResponsiblePerson" class="form-label small fw-bold">مدير الفرع</label>
                                <input asp-for="ResponsiblePerson" class="form-control bg-light" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="AllowedEmployees" class="form-label small fw-bold">عدد الموظفين المخصص</label>
                                <input asp-for="AllowedEmployees" class="form-control bg-light" type="number" min="1" value="5" />
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label small fw-bold">مرفقات (اختياري)</label>
                            <input type="file" name="attachment" class="form-control" />
                        </div>

                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-gold bg-dark text-gold fw-bold px-5 rounded-pill shadow-sm">
                                <i class="fas fa-save me-2"></i> تسجيل الفرع
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>