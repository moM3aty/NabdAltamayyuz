@model NabdAltamayyuz.Models.Company
@using System.Globalization

@{
    var isRtl = CultureInfo.CurrentCulture.Name.StartsWith("ar");
    ViewData["Title"] = isRtl ? "تعديل بيانات الشركة" : "Edit Company Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool isSuperAdmin = User.IsInRole("SuperAdmin");
}

<div class="container py-5 animate-fade-in" style="margin-top: 100px;">
    <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
        <div class="card-header bg-dark text-white py-3 px-4 d-flex justify-content-between align-items-center">
            <h5 class="mb-0 fw-bold text-gold"><i class="fas fa-edit me-2"></i> @(isRtl ? "تعديل: " : "Edit: ") @Model.Name</h5>
            <div class="d-flex gap-2">
                <button type="button" class="btn btn-sm @(Model.IsSuspended ? "btn-success" : "btn-warning") fw-bold" onclick="suspendCompany(@Model.Id)">
                    <i class="fas @(Model.IsSuspended ? "fa-play" : "fa-pause") me-1"></i>
                    @(Model.IsSuspended ? (isRtl ? "تفعيل الحساب" : "Activate") : (isRtl ? "تعليق الحساب" : "Suspend"))
                </button>

                @if (isSuperAdmin)
                {
                    <a href="/Companies/Delete/@Model.Id" class="btn btn-sm btn-danger fw-bold" onclick="return confirm('@(isRtl ? "تحذير: سيتم حذف الشركة وكافة الموظفين والبيانات المرتبطة بها نهائياً. هل أنت متأكد؟" : "Warning: This will permanently delete the company and all related data. Are you sure?")')">
                        <i class="fas fa-trash-alt me-1"></i> @(isRtl ? "حذف الشركة" : "Delete")
                    </a>
                }

                <a href="/Dashboard/SuperAdmin" class="btn btn-sm btn-outline-light rounded-pill">@(isRtl ? "إلغاء" : "Cancel")</a>
            </div>
        </div>
        <div class="card-body p-4 bg-white">
            <form asp-action="Edit" enctype="multipart/form-data" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CreatedAt" />
                <input type="hidden" asp-for="AttachmentPath" />
                <input type="hidden" asp-for="ParentCompanyId" />

                <!-- 1. البيانات الأساسية -->
                <h6 class="text-gold fw-bold mb-3 border-bottom pb-2">@(isRtl ? "البيانات الأساسية والاتصال" : "Basic & Contact Information")</h6>
                <div class="row g-3 mb-4">
                    <div class="col-md-4">
                        <label asp-for="Name" class="form-label small fw-bold">@(isRtl ? "اسم الشركة" : "Company Name")</label>
                        <input asp-for="Name" class="form-control bg-light" required />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="UnifiedNumber" class="form-label small fw-bold">@(isRtl ? "الرقم الموحد" : "Unified Number")</label>
                        <input asp-for="UnifiedNumber" class="form-control bg-light" />
                    </div>
                    <div class="col-md-4">
                        <label asp-for="RegistrationNumber" class="form-label small fw-bold">@(isRtl ? "رقم السجل التجاري" : "Commercial Registration No.")</label>
                        <input asp-for="RegistrationNumber" class="form-control bg-light" />
                    </div>
                    <div class="col-md-4">
                        <label asp-for="TaxNumber" class="form-label small fw-bold">@(isRtl ? "الرقم الضريبي" : "Tax Number")</label>
                        <input asp-for="TaxNumber" class="form-control bg-light" />
                    </div>
                    <div class="col-md-4">
                        <label asp-for="ResponsiblePerson" class="form-label small fw-bold">@(isRtl ? "اسم المسؤول" : "Responsible Person")</label>
                        <input asp-for="ResponsiblePerson" class="form-control bg-light" />
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Email" class="form-label small fw-bold">@(isRtl ? "البريد الإلكتروني" : "Email")</label>
                        <input asp-for="Email" class="form-control bg-light" />
                    </div>
                    <div class="col-md-4">
                        <label asp-for="PhoneNumber" class="form-label small fw-bold">@(isRtl ? "رقم التواصل" : "Contact Number")</label>
                        <input asp-for="PhoneNumber" class="form-control bg-light" />
                    </div>
                    <div class="col-md-4">
                        <label asp-for="NationalAddressShortCode" class="form-label small fw-bold">@(isRtl ? "العنوان الوطني (مختصر)" : "National Address (Short)")</label>
                        <input asp-for="NationalAddressShortCode" class="form-control bg-light" />
                    </div>
                    @if (isSuperAdmin)
                    {
                        <div class="col-md-4">
                            <label class="form-label small fw-bold text-danger">@(isRtl ? "تعيين كلمة مرور جديدة للمدير" : "Set New Manager Password")</label>
                            <input type="text" name="adminPassword" class="form-control bg-white border-warning" placeholder="@(isRtl ? "اتركها فارغة للاحتفاظ بالحالية" : "Leave empty to keep current")" />
                        </div>
                    }
                </div>

                <!-- 2. بيانات الاشتراك -->
                <h6 class="text-gold fw-bold mb-3 border-bottom pb-2 pt-2">@(isRtl ? "بيانات الاشتراك والحدود" : "Subscription & Limits")</h6>
                <div class="row g-3 mb-4">
                    <div class="col-md-3">
                        <label asp-for="SubscriptionStartDate" class="form-label small fw-bold">@(isRtl ? "بداية الاشتراك" : "Subscription Start")</label>
                        <input asp-for="SubscriptionStartDate" class="form-control bg-light" type="date" />
                    </div>
                    <div class="col-md-3">
                        <label asp-for="SubscriptionEndDate" class="form-label small fw-bold">@(isRtl ? "نهاية الاشتراك" : "Subscription End")</label>
                        <input asp-for="SubscriptionEndDate" class="form-control bg-light" type="date" />
                    </div>
                    <div class="col-md-3">
                        <label asp-for="PaymentTerm" class="form-label small fw-bold">@(isRtl ? "نظام السداد" : "Payment Term")</label>
                        <select asp-for="PaymentTerm" class="form-select bg-light" asp-items="Html.GetEnumSelectList<NabdAltamayyuz.Models.PaymentTerm>()"></select>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="NotificationDaysBeforeExpiry" class="form-label small fw-bold">@(isRtl ? "تنبيه قبل (يوم)" : "Alert Before (Days)")</label>
                        <input asp-for="NotificationDaysBeforeExpiry" class="form-control bg-light" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="AllowedSubAccounts" class="form-label small fw-bold">@(isRtl ? "الحسابات الفرعية المسموحة" : "Allowed Sub-Accounts")</label>
                        <input asp-for="AllowedSubAccounts" class="form-control bg-light" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="AllowedEmployees" class="form-label small fw-bold">@(isRtl ? "الموظفين المسموح بهم" : "Allowed Employees")</label>
                        <input asp-for="AllowedEmployees" class="form-control bg-light" />
                    </div>
                </div>

                <!-- 3. البيانات المالية -->
                <h6 class="text-gold fw-bold mb-3 border-bottom pb-2 pt-2">@(isRtl ? "البيانات المالية" : "Financials")</h6>
                <div class="row g-3 mb-4 bg-light p-3 rounded-3">
                    <div class="col-md-6">
                        <label asp-for="PricePerEmployee" class="form-label small fw-bold">@(isRtl ? "قيمة الاشتراك للموظف" : "Price Per Employee")</label>
                        <input asp-for="PricePerEmployee" class="form-control" type="number" step="0.01" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="TaxRate" class="form-label small fw-bold">@(isRtl ? "نسبة الضريبة %" : "Tax Rate %")</label>
                        <input asp-for="TaxRate" class="form-control" type="number" step="0.01" />
                    </div>
                </div>

                <!-- المرفقات -->
                @if (!string.IsNullOrEmpty(Model.AttachmentPath))
                {
                    <div class="alert alert-info py-2 d-flex justify-content-between align-items-center mb-3">
                        <small><i class="fas fa-paperclip me-2"></i> @(isRtl ? "يوجد ملف مرفق حالياً" : "Attachment exists")</small>
                        <a href="/uploads/companies/@Model.AttachmentPath" target="_blank" class="btn btn-sm btn-light">@(isRtl ? "عرض" : "View")</a>
                    </div>
                }

                <div class="mb-4">
                    <label class="form-label small fw-bold">@(isRtl ? "تحديث المرفقات (اختياري)" : "Update Attachments (Optional)")</label>
                    <input type="file" name="attachment" class="form-control" />
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-gold bg-dark text-gold fw-bold px-5 rounded-pill shadow-sm">
                        <i class="fas fa-check me-2"></i> @(isRtl ? "حفظ التعديلات" : "Save Changes")
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function suspendCompany(id) {
            var confirmMsg = '@(isRtl ? "هل أنت متأكد من تغيير حالة تعليق الحساب؟" : "Are you sure you want to change account suspension status?")';
            if(confirm(confirmMsg)) {
                var token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                fetch('/Companies/Suspend/' + id, {
                    method: 'POST',
                    headers: { 'RequestVerificationToken': token }
                })
                .then(response => response.json())
                .then(data => {
                    if(data.success) {
                        alert(data.message);
                        location.reload();
                    } else {
                        alert('@(isRtl ? "حدث خطأ: " : "Error: ")' + data.message);
                    }
                });
            }
        }
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}