@model NabdAltamayyuz.Models.Company
@using System.Globalization

@{
    ViewData["Title"] = "تعديل بيانات الشركة";
    var isRtl = CultureInfo.CurrentCulture.Name.StartsWith("ar");
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5 animate-fade-in" style="margin-top: 100px;">
    <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
        <div class="card-header bg-dark text-white py-3 px-4 d-flex justify-content-between align-items-center">
            <h5 class="mb-0 fw-bold text-gold"><i class="fas fa-edit me-2"></i> @(isRtl ? "تعديل: " : "Edit: ") @Model.Name</h5>
            <div class="d-flex gap-2">
                <!-- زر التعليق (يستدعي دالة JavaScript) -->
                <button type="button" class="btn btn-sm @(Model.IsSuspended ? "btn-success" : "btn-warning") fw-bold" onclick="suspendCompany(@Model.Id)">
                    <i class="fas @(Model.IsSuspended ? "fa-play" : "fa-pause") me-1"></i>
                    @(Model.IsSuspended ? (isRtl ? "تفعيل الحساب" : "Activate") : (isRtl ? "تعليق الحساب" : "Suspend"))
                </button>
                <a href="/Dashboard/SuperAdmin" class="btn btn-sm btn-outline-light rounded-pill">@(isRtl ? "إلغاء" : "Cancel")</a>
            </div>
        </div>
        <div class="card-body p-4 bg-white">
            <form asp-action="Edit" enctype="multipart/form-data" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CreatedAt" />
                <input type="hidden" asp-for="AttachmentPath" />
                <input type="hidden" asp-for="ParentCompanyId" />

                <!-- 1. البيانات الأساسية -->
                <h6 class="text-gold fw-bold mb-3 border-bottom pb-2">البيانات الأساسية والاتصال</h6>
                <div class="row g-3 mb-4">
                    <div class="col-md-4">
                        <label asp-for="Name" class="form-label small fw-bold">اسم الشركة</label>
                        <input asp-for="Name" class="form-control bg-light" required />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="UnifiedNumber" class="form-label small fw-bold">الرقم الموحد</label>
                        <input asp-for="UnifiedNumber" class="form-control bg-light" />
                    </div>
                    <div class="col-md-4">
                        <label asp-for="RegistrationNumber" class="form-label small fw-bold">رقم السجل التجاري</label>
                        <input asp-for="RegistrationNumber" class="form-control bg-light" />
                    </div>
                    <div class="col-md-4">
                        <label asp-for="TaxNumber" class="form-label small fw-bold">الرقم الضريبي</label>
                        <input asp-for="TaxNumber" class="form-control bg-light" />
                    </div>
                    <div class="col-md-4">
                        <label asp-for="ResponsiblePerson" class="form-label small fw-bold">اسم المسؤول</label>
                        <input asp-for="ResponsiblePerson" class="form-control bg-light" />
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Email" class="form-label small fw-bold">البريد الإلكتروني</label>
                        <input asp-for="Email" class="form-control bg-light" />
                    </div>
                    <div class="col-md-4">
                        <label asp-for="PhoneNumber" class="form-label small fw-bold">رقم التواصل</label>
                        <input asp-for="PhoneNumber" class="form-control bg-light" />
                        <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="NationalAddressShortCode" class="form-label small fw-bold">العنوان الوطني (مختصر)</label>
                        <input asp-for="NationalAddressShortCode" class="form-control bg-light" />
                    </div>
                </div>

                <!-- 2. بيانات الاشتراك (مهمة للتجديد) -->
                <h6 class="text-gold fw-bold mb-3 border-bottom pb-2 pt-2">بيانات الاشتراك والحدود</h6>
                <div class="row g-3 mb-4">
                    <div class="col-md-3">
                        <label asp-for="SubscriptionStartDate" class="form-label small fw-bold">بداية الاشتراك</label>
                        <input asp-for="SubscriptionStartDate" class="form-control bg-light" type="date" />
                    </div>
                    <div class="col-md-3">
                        <label asp-for="SubscriptionEndDate" class="form-label small fw-bold">نهاية الاشتراك</label>
                        <input asp-for="SubscriptionEndDate" class="form-control bg-light" type="date" />
                    </div>
                    <div class="col-md-3">
                        <label asp-for="PaymentTerm" class="form-label small fw-bold">نظام السداد</label>
                        <select asp-for="PaymentTerm" class="form-select bg-light" asp-items="Html.GetEnumSelectList<NabdAltamayyuz.Models.PaymentTerm>()"></select>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="NotificationDaysBeforeExpiry" class="form-label small fw-bold">تنبيه قبل (يوم)</label>
                        <input asp-for="NotificationDaysBeforeExpiry" class="form-control bg-light" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="AllowedSubAccounts" class="form-label small fw-bold">الحسابات الفرعية المسموحة</label>
                        <input asp-for="AllowedSubAccounts" class="form-control bg-light" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="AllowedEmployees" class="form-label small fw-bold">الموظفين المسموح بهم</label>
                        <input asp-for="AllowedEmployees" class="form-control bg-light" />
                    </div>
                </div>

                <!-- 3. البيانات المالية (للتعديل عند الضرورة) -->
                <h6 class="text-gold fw-bold mb-3 border-bottom pb-2 pt-2">البيانات المالية</h6>
                <div class="row g-3 mb-4 bg-light p-3 rounded-3">
                    <div class="col-md-6">
                        <label asp-for="PricePerEmployee" class="form-label small fw-bold">قيمة الاشتراك للموظف</label>
                        <input asp-for="PricePerEmployee" class="form-control" type="number" step="0.01" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="TaxRate" class="form-label small fw-bold">نسبة الضريبة %</label>
                        <input asp-for="TaxRate" class="form-control" type="number" step="0.01" />
                    </div>
                </div>

                <!-- عرض المرفق الحالي -->
                @if (!string.IsNullOrEmpty(Model.AttachmentPath))
                {
                    <div class="alert alert-info py-2 d-flex justify-content-between align-items-center mb-3">
                        <small><i class="fas fa-paperclip me-2"></i> يوجد ملف مرفق حالياً (العقد/السجل)</small>
                        <a href="/uploads/companies/@Model.AttachmentPath" target="_blank" class="btn btn-sm btn-light">عرض</a>
                    </div>
                }

                <div class="mb-4">
                    <label class="form-label small fw-bold">تحديث المرفقات (اختياري)</label>
                    <input type="file" name="attachment" class="form-control" />
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-gold bg-dark text-gold fw-bold px-5 rounded-pill shadow-sm">
                        <i class="fas fa-check me-2"></i> حفظ التعديلات
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // استخدام Fetch API لضمان العمل بدون مشاكل jQuery
        function suspendCompany(id) {
            if(confirm('هل أنت متأكد من تغيير حالة تعليق الحساب؟')) {
                // يجب إرسال AntiForgeryToken إذا كانت مفعلة عالمياً، هنا نستخدم Post بسيط
                fetch('/Companies/Suspend/' + id, {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    }
                })
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    return response.json();
                })
                .then(data => {
                    if(data.success) {
                        alert(data.message);
                        location.reload();
                    } else {
                        alert("حدث خطأ: " + data.message);
                    }
                })
                .catch(error => {
                    console.error('There has been a problem with your fetch operation:', error);
                    alert("حدث خطأ أثناء الاتصال بالسيرفر.");
                });
            }
        }
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}