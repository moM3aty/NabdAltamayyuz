@model NabdAltamayyuz.Models.Company
@using System.Globalization

@{
    ViewData["Title"] = "تفاصيل الشركة";
    var isRtl = CultureInfo.CurrentCulture.Name.StartsWith("ar");
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5 animate-fade-in" style="margin-top: 100px;">
    <!-- Header Actions -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <a href="/Dashboard/SuperAdmin" class="btn btn-outline-secondary rounded-pill">
            <i class="fas fa-arrow-right me-2 rtl-flip"></i> @(isRtl ? "عودة للوحة التحكم" : "Back to Dashboard")
        </a>
        <div class="d-flex gap-2">
            <a href="/Companies/Edit/@Model.Id" class="btn btn-gold bg-dark text-gold fw-bold rounded-pill px-4 shadow-sm">
                <i class="fas fa-edit me-2"></i> @(isRtl ? "تعديل البيانات" : "Edit Details")
            </a>
        </div>
    </div>

    <div class="row g-4">
        <!-- Main Info Card -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden mb-4">
                <div class="card-header bg-dark text-white p-4 d-flex justify-content-between align-items-start">
                    <div class="d-flex align-items-center">
                        <div class="avatar-circle bg-gold text-dark rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 60px; height: 60px; font-size: 1.5rem;">
                            <i class="fas fa-building"></i>
                        </div>
                        <div>
                            <h4 class="mb-1 text-gold fw-bold">@Model.Name</h4>
                            <p class="mb-0 text-white-50 font-monospace">@Model.RegistrationNumber</p>
                        </div>
                    </div>
                    <span class="badge @(Model.IsSuspended ? "bg-danger" : "bg-success") rounded-pill px-3 py-2">
                        @(Model.IsSuspended ? (isRtl ? "معلق" : "Suspended") : (isRtl ? "نشط" : "Active"))
                    </span>
                </div>
                <div class="card-body p-4 bg-white">
                    <h6 class="text-uppercase text-muted small fw-bold mb-3">@(isRtl ? "معلومات الاتصال والمسؤول" : "Contact & Responsible Info")</h6>
                    <div class="row g-4 mb-4">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center">
                                <div class="icon-box bg-light rounded-circle p-2 me-3"><i class="fas fa-user-tie text-gold"></i></div>
                                <div>
                                    <small class="text-muted d-block">@(isRtl ? "المسؤول" : "Responsible Person")</small>
                                    <span class="fw-bold">@Model.ResponsiblePerson</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center">
                                <div class="icon-box bg-light rounded-circle p-2 me-3"><i class="fas fa-phone text-gold"></i></div>
                                <div>
                                    <small class="text-muted d-block">@(isRtl ? "رقم التواصل" : "Phone")</small>
                                    <span class="fw-bold" dir="ltr">@Model.PhoneNumber</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center">
                                <div class="icon-box bg-light rounded-circle p-2 me-3"><i class="fas fa-envelope text-gold"></i></div>
                                <div>
                                    <small class="text-muted d-block">@(isRtl ? "البريد الإلكتروني" : "Email")</small>
                                    <span class="fw-bold">@Model.Email</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center">
                                <div class="icon-box bg-light rounded-circle p-2 me-3"><i class="fas fa-map-marker-alt text-gold"></i></div>
                                <div>
                                    <small class="text-muted d-block">@(isRtl ? "العنوان الوطني" : "National Address")</small>
                                    <span class="fw-bold">@Model.NationalAddressShortCode</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr class="opacity-10 my-4">

                    <h6 class="text-uppercase text-muted small fw-bold mb-3">@(isRtl ? "البيانات الرسمية" : "Official Data")</h6>
                    <div class="row g-4">
                        <div class="col-md-4">
                            <div class="p-3 bg-light rounded-3 border">
                                <small class="text-muted d-block mb-1">الرقم الموحد</small>
                                <strong class="text-dark font-monospace">@Model.UnifiedNumber</strong>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="p-3 bg-light rounded-3 border">
                                <small class="text-muted d-block mb-1">الرقم الضريبي</small>
                                <strong class="text-dark font-monospace">@Model.TaxNumber</strong>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="p-3 bg-light rounded-3 border">
                                <small class="text-muted d-block mb-1">تاريخ الإضافة</small>
                                <strong class="text-dark">@Model.CreatedAt.ToString("yyyy-MM-dd")</strong>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sub Companies Section -->
            @if (Model.SubCompanies != null && Model.SubCompanies.Any())
            {
                <div class="card border-0 shadow-lg rounded-4 overflow-hidden mb-4">
                    <div class="card-header bg-white py-3 px-4 border-bottom">
                        <h6 class="mb-0 fw-bold text-dark"><i class="fas fa-code-branch text-gold me-2"></i> @(isRtl ? "الفروع / الشركات التابعة" : "Sub-Companies / Branches")</h6>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="bg-light text-muted small text-uppercase">
                                    <tr>
                                        <th class="ps-4">الاسم</th>
                                        <th>السجل</th>
                                        <th>المسؤول</th>
                                        <th class="text-end pe-4">عرض</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var sub in Model.SubCompanies)
                                    {
                                        <tr>
                                            <td class="ps-4 fw-bold">@sub.Name</td>
                                            <td class="font-monospace text-muted">@sub.RegistrationNumber</td>
                                            <td>@sub.ResponsiblePerson</td>
                                            <td class="text-end pe-4">
                                                <a href="/Companies/Details/@sub.Id" class="btn btn-sm btn-outline-dark rounded-circle"><i class="fas fa-chevron-left rtl-flip"></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }

            <!-- Subscription Details -->
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-white py-3 px-4 border-bottom">
                    <h6 class="mb-0 fw-bold text-dark"><i class="fas fa-file-contract text-gold me-2"></i> @(isRtl ? "تفاصيل الاشتراك" : "Subscription Details")</h6>
                </div>
                <div class="card-body p-4">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="border-start border-4 border-gold ps-3">
                                <small class="text-muted">فترة الاشتراك</small>
                                <div class="fw-bold fs-5 mt-1">
                                    @Model.SubscriptionStartDate.ToString("dd MMM yyyy") <i class="fas fa-arrow-left mx-2 text-muted small rtl-flip"></i> @Model.SubscriptionEndDate.ToString("dd MMM yyyy")
                                </div>
                                @{
                                    var daysLeft = (Model.SubscriptionEndDate - DateTime.Now).Days;
                                    var badgeColor = daysLeft < 30 ? "text-danger" : "text-success";
                                }
                                <small class="@badgeColor fw-bold mt-1 d-block">
                                    @(daysLeft > 0 ? $"متبقي {daysLeft} يوم" : "منتهي الصلاحية")
                                </small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="row text-center">
                                <div class="col-6">
                                    <h3 class="fw-bold mb-0">@Model.AllowedEmployees</h3>
                                    <small class="text-muted">موظف مسموح</small>
                                </div>
                                <div class="col-6 border-start">
                                    <h3 class="fw-bold mb-0">@Model.AllowedSubAccounts</h3>
                                    <small class="text-muted">فرع مسموح</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar: Financials & Attachments -->
        <div class="col-lg-4">
            <!-- Financial Card -->
            <div class="card border-0 shadow-lg rounded-4 mb-4 bg-dark text-white">
                <div class="card-body p-4 position-relative overflow-hidden">
                    <div class="position-absolute top-0 end-0 opacity-10 p-3"><i class="fas fa-coins fa-5x text-gold"></i></div>
                    <h6 class="text-gold text-uppercase letter-spacing-1 mb-4">@(isRtl ? "البيانات المالية" : "Financials")</h6>

                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-white-50">قيمة الموظف:</span>
                        <span class="fw-bold">@Model.PricePerEmployee.ToString("N2") SAR</span>
                    </div>
                    <div class="d-flex justify-content-between mb-3 border-bottom border-secondary pb-2">
                        <span class="text-white-50">الضريبة (@Model.TaxRate%):</span>
                        <span class="fw-bold">@((Model.PricePerEmployee * Model.TaxRate / 100).ToString("N2")) SAR</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="text-white">الإجمالي (للموظف):</span>
                        <span class="text-gold fs-4 fw-bold">@Model.TotalPricePerEmployee.ToString("N2") <small class="fs-6">SAR</small></span>
                    </div>

                    <div class="mt-4 pt-3 border-top border-secondary">
                        <small class="text-white-50 d-block mb-1">نظام السداد:</small>
                        <span class="badge bg-gold text-dark px-3">@Model.PaymentTerm</span>
                    </div>
                </div>
            </div>

            <!-- Attachments Card -->
            <div class="card border-0 shadow-lg rounded-4">
                <div class="card-header bg-white py-3 border-bottom">
                    <h6 class="mb-0 fw-bold text-dark"><i class="fas fa-paperclip text-secondary me-2"></i> @(isRtl ? "المرفقات والعقود" : "Attachments")</h6>
                </div>
                <div class="card-body p-4">
                    @if (!string.IsNullOrEmpty(Model.AttachmentPath))
                    {
                        <div class="d-flex align-items-center p-3 bg-light rounded-3 border">
                            <div class="icon-box bg-danger bg-opacity-10 text-danger rounded-circle p-2 me-3">
                                <i class="fas fa-file-pdf fa-lg"></i>
                            </div>
                            <div class="flex-grow-1 overflow-hidden">
                                <h6 class="mb-0 fw-bold text-truncate" title="@Model.AttachmentPath">ملف العقد / السجل</h6>
                                <small class="text-muted">مرفق</small>
                            </div>
                            <a href="/uploads/companies/@Model.AttachmentPath" target="_blank" class="btn btn-sm btn-outline-dark rounded-pill px-3">
                                @(isRtl ? "فتح" : "Open")
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="fas fa-file-excel fa-2x mb-2 opacity-50"></i>
                            <p class="mb-0 small">لا توجد مرفقات لهذه الشركة</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>