@model NabdAltamayyuz.Models.ApplicationUser
@using NabdAltamayyuz.Models
@using System.Globalization

@{
    ViewData["Title"] = "ملف الموظف";
    var isRtl = CultureInfo.CurrentCulture.Name.StartsWith("ar");
    Layout = "~/Views/Shared/_Layout.cshtml";

    var attendanceLog = ViewBag.AttendanceLog as List<Attendance>;
    var tasksLog = ViewBag.TasksLog as List<WorkTask>;
}

<div class="container py-5 animate-fade-in" style="margin-top: 100px;">
    <!-- Employee Info Card -->
    <div class="card border-0 shadow-lg rounded-4 mb-5 overflow-hidden">
        <div class="card-header bg-dark text-white p-4 d-flex justify-content-between">
            <h5 class="mb-0 fw-bold text-gold"><i class="fas fa-id-badge me-2"></i> بطاقة الموظف</h5>
            <a href="/Employees" class="btn btn-sm btn-outline-light rounded-pill"><i class="fas fa-arrow-left me-1"></i> عودة</a>
        </div>
        <div class="card-body p-4 bg-white">
            <div class="row align-items-center">
                <div class="col-md-2 text-center">
                    <div class="avatar-circle bg-gold-light text-gold fw-bold d-inline-flex align-items-center justify-content-center border border-gold mb-3" style="width: 100px; height: 100px; font-size: 2.5rem;">
                        @Model.FullName.Substring(0, 1).ToUpper()
                    </div>
                </div>
                <div class="col-md-10">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <small class="text-muted d-block">الاسم</small>
                            <span class="fw-bold">@Model.FullName</span>
                        </div>
                        <div class="col-md-4">
                            <small class="text-muted d-block">الوظيفة</small>
                            <span class="fw-bold">@Model.JobTitle</span>
                        </div>
                        <div class="col-md-4">
                            <small class="text-muted d-block">الشركة</small>
                            <span class="fw-bold">@(Model.Company?.Name ?? "-")</span>
                        </div>
                        <div class="col-md-4">
                            <small class="text-muted d-block">الهوية</small>
                            <span class="font-monospace">@Model.NationalId</span>
                        </div>
                        <div class="col-md-4">
                            <small class="text-muted d-block">الحالة</small>
                            <span class="badge @(Model.IsSuspended ? "bg-danger" : "bg-success")">@(Model.IsSuspended ? "معلق" : Model.Status)</span>
                        </div>
                        <div class="col-md-4">
                            @if (!string.IsNullOrEmpty(Model.AttachmentPath))
                            {
                                <a href="/uploads/employees/@Model.AttachmentPath" target="_blank" class="btn btn-sm btn-outline-dark rounded-pill mt-2">عرض المستندات</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Attendance History -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-header bg-white py-3 border-bottom">
                    <h6 class="mb-0 fw-bold"><i class="fas fa-clock text-gold me-2"></i> سجل الحضور والانصراف</h6>
                </div>
                <div class="card-body">
                    <!-- Filter -->
                    <form method="get" class="row g-2 mb-3 align-items-end">
                        <input type="hidden" name="id" value="@Model.Id" /> <!-- الحفاظ على الـ ID -->
                        <div class="col-5">
                            <label class="small text-muted">من</label>
                            <input type="date" name="attendanceFrom" class="form-control form-control-sm" value="@ViewBag.AttFrom">
                        </div>
                        <div class="col-5">
                            <label class="small text-muted">إلى</label>
                            <input type="date" name="attendanceTo" class="form-control form-control-sm" value="@ViewBag.AttTo">
                        </div>
                        <div class="col-2">
                            <button class="btn btn-sm btn-dark w-100"><i class="fas fa-search"></i></button>
                        </div>
                    </form>

                    <div class="table-responsive" style="max-height: 400px; overflow-y: auto;">
                        <table class="table table-sm table-hover mb-0 font-monospace" style="font-size: 0.9rem;">
                            <thead class="table-light sticky-top">
                                <tr>
                                    <th>التاريخ</th>
                                    <th>دخول</th>
                                    <th>خروج</th>
                                    <th>ساعات</th>
                                    <th>حالة</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (attendanceLog != null && attendanceLog.Any())
                                {
                                    foreach (var item in attendanceLog)
                                    {
                                        <tr>
                                            <td>@item.Date.ToString("yyyy-MM-dd")</td>
                                            <td class="text-success">@(item.TimeIn?.ToString("HH:mm") ?? "-")</td>
                                            <td class="text-danger">@(item.TimeOut?.ToString("HH:mm") ?? "-")</td>
                                            <td>
                                                @if (item.TimeIn.HasValue && item.TimeOut.HasValue)
                                                {
                                                    @((item.TimeOut.Value - item.TimeIn.Value).TotalHours.ToString("0.0"))
                                                }
                                                else
                                                {

                                                    <text>-</text>
                                                }
                                            </td>
                                            <td>@(item.TimeIn != null ? "حضور" : "غياب")</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr><td colspan="5" class="text-center py-3 text-muted">لا توجد بيانات</td></tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tasks History -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-header bg-white py-3 border-bottom">
                    <h6 class="mb-0 fw-bold"><i class="fas fa-tasks text-gold me-2"></i> سجل المهام</h6>
                </div>
                <div class="card-body">
                    <!-- Filter -->
                    <form method="get" class="row g-2 mb-3 align-items-end">
                        <input type="hidden" name="id" value="@Model.Id" /> <!-- الحفاظ على الـ ID -->
                        <div class="col-10">
                            <label class="small text-muted">الحالة</label>
                            <select name="taskStatus" class="form-select form-select-sm" asp-items="Html.GetEnumSelectList<NabdAltamayyuz.Models.TaskStatus>()">
                                <option value="">-- الكل --</option>
                            </select>
                        </div>
                        <div class="col-2">
                            <button class="btn btn-sm btn-dark w-100"><i class="fas fa-search"></i></button>
                        </div>
                    </form>

                    <div class="table-responsive" style="max-height: 400px; overflow-y: auto;">
                        <table class="table table-sm table-hover mb-0" style="font-size: 0.9rem;">
                            <thead class="table-light sticky-top">
                                <tr>
                                    <th>المهمة</th>
                                    <th>استحقاق</th>
                                    <th>الحالة</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (tasksLog != null && tasksLog.Any())
                                {
                                    foreach (var item in tasksLog)
                                    {
                                        <tr>
                                            <td class="text-truncate" style="max-width: 150px;" title="@item.Title">@item.Title</td>
                                            <td>@item.DueDate.ToString("MM/dd")</td>
                                            <td>
                                                <span class="badge @(item.Status == NabdAltamayyuz.Models.TaskStatus.Completed ? "bg-success" : "bg-warning text-dark")">
                                                    @item.Status
                                                </span>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr><td colspan="3" class="text-center py-3 text-muted">لا توجد مهام</td></tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>