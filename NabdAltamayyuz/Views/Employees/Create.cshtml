@model NabdAltamayyuz.Models.ApplicationUser
@using NabdAltamayyuz.Models
@using System.Globalization

@{
    ViewData["Title"] = "إضافة مستخدم جديد";
    var isRtl = CultureInfo.CurrentCulture.Name.StartsWith("ar");
    Layout = "~/Views/Shared/_Layout.cshtml";

    bool isSuperAdmin = User.IsInRole("SuperAdmin");
    bool isCompanyAdmin = User.IsInRole("CompanyAdmin");
}

<div class="container py-5 animate-fade-in" style="margin-top: 100px;">
    <div class="row justify-content-center">
        <div class="col-md-9">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-dark text-white py-3 border-0 d-flex justify-content-between align-items-center px-4">
                    <h5 class="mb-0 fw-bold text-gold">
                        <i class="fas fa-user-plus me-2"></i> @(isRtl ? "إضافة مستخدم جديد" : "Add New User")
                    </h5>
                    <a href="/Employees" class="btn btn-sm btn-outline-light rounded-pill border-secondary text-white-50 hover-white">
                        <i class="fas fa-times me-1"></i> @(isRtl ? "إلغاء" : "Cancel")
                    </a>
                </div>
                <div class="card-body p-4 p-md-5 bg-white">

                    <!-- منطقة عرض الأخطاء - مهمة جداً لمعرفة سبب المشكلة -->
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger shadow-sm rounded-3 mb-4">
                            <h6 class="fw-bold"><i class="fas fa-exclamation-triangle me-2"></i> يرجى تصحيح الأخطاء التالية:</h6>
                            <div asp-validation-summary="All" class="text-danger small mb-0 ps-3"></div>
                        </div>
                    }

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger text-center">@TempData["Error"]</div>
                    }

                    <form asp-action="Create" enctype="multipart/form-data" method="post">
                        @Html.AntiForgeryToken()

                        <!-- Role & Company Selection -->
                        <div class="row g-4 mb-4 bg-light p-3 rounded-3 border border-secondary border-opacity-10">
                            @if (isSuperAdmin)
                            {
                                <div class="col-md-6">
                                    <label asp-for="CompanyId" class="form-label fw-bold small text-gold">الشركة التابع لها</label>
                                    <select asp-for="CompanyId" class="form-select" asp-items="ViewBag.Companies">
                                        <option value="">-- اختر الشركة --</option>
                                    </select>
                                </div>
                            }

                            <div class="col-md-6">
                                <label class="form-label fw-bold small text-gold">نوع المستخدم (الصلاحية)</label>
                                <select name="selectedRole" class="form-select">
                                    <option value="@UserRole.Employee">موظف (Employee)</option>
                                    @if (isSuperAdmin || isCompanyAdmin)
                                    {
                                        <option value="@UserRole.SubAdmin">مشرف فرعي (Sub Admin)</option>
                                    }
                                    @if (isSuperAdmin)
                                    {
                                        <option value="@UserRole.CompanyAdmin">مشرف رئيسي (Company Admin)</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <!-- Personal Info -->
                        <h6 class="text-dark fw-bold mb-3 border-bottom pb-2">@(isRtl ? "البيانات الشخصية" : "Personal Info")</h6>
                        <div class="row g-4 mb-4">
                            <div class="col-md-6">
                                <label asp-for="FullName" class="form-label fw-bold small">@(isRtl ? "الاسم الرباعي" : "Full Name")</label>
                                <input asp-for="FullName" class="form-control" />
                                <span asp-validation-for="FullName" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="NationalId" class="form-label fw-bold small">@(isRtl ? "رقم الهوية / الإقامة" : "National ID / Iqama")</label>
                                <input asp-for="NationalId" class="form-control" />
                                <span asp-validation-for="NationalId" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="PhoneNumber" class="form-label fw-bold small">@(isRtl ? "رقم الجوال" : "Phone Number")</label>
                                <input asp-for="PhoneNumber" class="form-control" placeholder="05xxxxxxxx" />
                                <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label fw-bold small">@(isRtl ? "البريد الإلكتروني" : "Email")</label>
                                <input asp-for="Email" type="email" class="form-control" placeholder="user@company.com" />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Job Info -->
                        <h6 class="text-dark fw-bold mb-3 border-bottom pb-2 pt-2">@(isRtl ? "بيانات الوظيفة" : "Job Details")</h6>
                        <div class="row g-4 mb-4">
                            <div class="col-md-6">
                                <label asp-for="JobTitle" class="form-label fw-bold small">@(isRtl ? "المسمى الوظيفي" : "Job Title")</label>
                                <input asp-for="JobTitle" class="form-control" />
                                <span asp-validation-for="JobTitle" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold small text-muted">@(isRtl ? "كلمة المرور الافتراضية" : "Default Password")</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-0"><i class="fas fa-lock"></i></span>
                                    <input type="text" class="form-control bg-light text-muted border-0" value="123456" readonly />
                                </div>
                            </div>
                            <div class="col-md-12">
                                <label class="form-label fw-bold small">@(isRtl ? "مرفقات (صورة الهوية / العقد)" : "Attachments")</label>
                                <input type="file" name="attachment" class="form-control" />
                                <div class="form-text small">@(isRtl ? "صيغ مسموحة: PDF, JPG, PNG" : "Allowed: PDF, JPG, PNG")</div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <button type="submit" class="btn btn-gold bg-dark text-gold fw-bold px-5 py-2 rounded-pill hover-scale shadow-sm">
                                <i class="fas fa-check me-2"></i> @(isRtl ? "حفظ البيانات" : "Save Data")
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>