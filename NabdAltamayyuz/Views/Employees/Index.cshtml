@model IEnumerable<NabdAltamayyuz.Models.ApplicationUser>
@using System.Globalization

@{
    ViewData["Title"] = "إدارة الموظفين";
    var isRtl = CultureInfo.CurrentCulture.Name.StartsWith("ar");
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5 animate-fade-in" style="margin-top: 120px;">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="fw-bold text-dark"><i class="fas fa-users text-gold me-2"></i> @(isRtl ? "سجل الموظفين" : "Employees Directory")</h3>
            <p class="text-muted small">@(isRtl ? "إدارة وتصفح بيانات الموظفين" : "Manage and view employee data")</p>
        </div>
        <a href="/Employees/Create" class="btn btn-gold bg-dark text-gold fw-bold rounded-pill shadow-sm hover-scale px-4">
            <i class="fas fa-user-plus me-2"></i> @(isRtl ? "موظف جديد" : "New Employee")
        </a>
    </div>

    <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-muted small text-uppercase">
                        <tr>
                            <th class="ps-4"> @(isRtl ? "الهوية" : " ID")</th>
                            <th>@(isRtl ? "الاسم " : "Name")</th>
                            <th>@(isRtl ? "الوظيفة" : "Job Title")</th>
                            <th>@(isRtl ? "معلومات التواصل" : "Contact")</th>
                            <th>@(isRtl ? "الحالة" : "Status")</th>
                            <th>@(isRtl ? "المستندات" : "Docs")</th>
                            <th class="text-end pe-4">@(isRtl ? "إجراءات" : "Actions")</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="avatar-circle bg-gold-light text-gold fw-bold rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                        @item.Id
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-circle bg-gold-light text-gold fw-bold rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                                @item.FullName.Substring(0, 1).ToUpper()  
                                            </div>
                                            <div>
                                                <div class="fw-bold text-dark">@item.FullName</div>
                                                <small class="text-muted font-monospace">@item.NationalId</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td><span class="badge bg-light text-dark border">@item.JobTitle</span></td>
                                    <td>
                                        <div class="d-flex flex-column small">
                                            <span><i class="fas fa-envelope me-1 text-gold"></i> @item.Email</span>
                                            <span><i class="fas fa-phone me-1 text-gold"></i> @item.PhoneNumber</span>
                                        </div>
                                    </td>
                                    <td>
                                        @if (item.Status == "Active")
                                        {
                                            <span class="badge bg-success bg-opacity-10 text-success rounded-pill">نشط</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger bg-opacity-10 text-danger rounded-pill">@item.Status</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.AttachmentPath))
                                        {
                                            <a href="/uploads/employees/@item.AttachmentPath" target="_blank" class="text-secondary hover-gold" title="عرض"><i class="fas fa-file-alt fa-lg"></i></a>
                                        }
                                        else
                                        {
                                            <span class="text-muted opacity-25">-</span>
                                        }
                                    </td>
                                    <td class="text-end pe-4">
                                        <div class="d-flex justify-content-end gap-2">
                                            <a href="/Employees/Edit/@item.Id" class="btn btn-sm btn-outline-primary rounded-circle"><i class="fas fa-edit"></i></a>
                                            <a href="/Employees/Delete/@item.Id" class="btn btn-sm btn-outline-danger rounded-circle" onclick="return confirm('حذف الموظف نهائياً؟')"><i class="fas fa-trash-alt"></i></a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center py-5 text-muted">لا يوجد موظفين</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>