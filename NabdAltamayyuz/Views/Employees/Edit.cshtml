@model NabdAltamayyuz.Models.ApplicationUser
@using System.Globalization

@{
    ViewData["Title"] = "تعديل بيانات موظف";
    var isRtl = CultureInfo.CurrentCulture.Name.StartsWith("ar");
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5 animate-fade-in" style="margin-top: 100px;">
    <div class="row justify-content-center">
        <div class="col-md-9">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-dark text-white py-3 border-0 d-flex justify-content-between align-items-center px-4">
                    <h5 class="mb-0 fw-bold text-gold">
                        <i class="fas fa-user-edit me-2"></i> @(isRtl ? "تعديل بيانات الموظف" : "Edit Employee")
                    </h5>
                    <a href="/Employees" class="btn btn-sm btn-outline-light rounded-pill border-secondary text-white-50 hover-white">
                        <i class="fas fa-arrow-left me-1"></i> @(isRtl ? "عودة" : "Back")
                    </a>
                </div>
                <div class="card-body p-4 p-md-5 bg-white">

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success">@TempData["Success"]</div>
                    }

                    <form asp-action="Edit" enctype="multipart/form-data" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="AttachmentPath" />

                        <div class="row g-4 mb-4">
                            <div class="col-md-6">
                                <label asp-for="FullName" class="form-label fw-bold small">الاسم الكامل</label>
                                <input asp-for="FullName" class="form-control bg-light" required />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="NationalId" class="form-label fw-bold small">رقم الهوية</label>
                                <input asp-for="NationalId" class="form-control bg-light" required />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="PhoneNumber" class="form-label fw-bold small">الجوال</label>
                                <input asp-for="PhoneNumber" class="form-control bg-light" required />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label fw-bold small">البريد الإلكتروني</label>
                                <input asp-for="Email" class="form-control bg-light" readonly />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="JobTitle" class="form-label fw-bold small">المسمى الوظيفي</label>
                                <input asp-for="JobTitle" class="form-control bg-light" required />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Status" class="form-label fw-bold small">حالة الحساب</label>
                                <select asp-for="Status" class="form-select bg-light">
                                    <option value="Active">نشط</option>
                                    <option value="Inactive">غير نشط</option>
                                    <option value="Suspended">معلق</option>
                                </select>
                            </div>
                            <div class="col-md-12">
                                <div class="p-3 border border-warning rounded-3 bg-light">
                                    <label class="form-label fw-bold small text-warning"><i class="fas fa-key me-1"></i> تغيير كلمة المرور</label>
                                    <input type="text" name="newPassword" class="form-control bg-white border-warning" placeholder="اترك هذا الحقل فارغاً للاحتفاظ بكلمة المرور الحالية" />
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold small">تحديث المستندات (اختياري)</label>
                            <input type="file" name="attachment" class="form-control" />
                        </div>

                        <div class="d-flex justify-content-between align-items-center pt-3 border-top">
                            <!-- زر إعادة تعيين كلمة المرور -->
                            <button type="submit" formaction="/Employees/ResetPassword/@Model.Id" class="btn btn-outline-warning rounded-pill">
                                <i class="fas fa-key me-2"></i> إعادة تعيين كلمة المرور (الافتراضية)
                            </button>

                            <button type="submit" class="btn btn-gold bg-dark text-gold fw-bold px-5 rounded-pill shadow-sm">
                                <i class="fas fa-save me-2"></i> حفظ التعديلات
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>