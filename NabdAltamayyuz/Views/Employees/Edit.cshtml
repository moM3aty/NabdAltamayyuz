@model NabdAltamayyuz.Models.ApplicationUser
@using System.Globalization

@{
    ViewData["Title"] = "تعديل بيانات موظف";
    var isRtl = CultureInfo.CurrentCulture.Name.StartsWith("ar");
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- تمت إضافة margin-top: 100px لتفادي التداخل مع الـ Navbar -->
<div class="container py-5 animate-fade-in" style="margin-top: 100px;">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-dark text-white py-3 border-0 d-flex justify-content-between align-items-center px-4">
                    <h5 class="mb-0 fw-bold text-gold">
                        <i class="fas fa-user-edit me-2"></i> @(isRtl ? "تعديل بيانات الموظف" : "Edit Employee Details")
                    </h5>
                    <a href="/Employees" class="btn btn-sm btn-outline-light rounded-pill border-secondary text-white-50 hover-white">
                        <i class="fas fa-arrow-left me-1"></i> @(isRtl ? "عودة" : "Back")
                    </a>
                </div>
                <div class="card-body p-4 p-md-5 bg-white">
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />

                        <div class="text-center mb-4">
                            <div class="avatar-circle bg-light text-gold fw-bold d-inline-flex align-items-center justify-content-center border border-gold mb-2" style="width: 80px; height: 80px; border-radius: 50%; font-size: 2rem;">
                                @Model.FullName?.Substring(0, 1).ToUpper()
                            </div>
                            <h5 class="fw-bold text-dark">@Model.FullName</h5>
                            <p class="text-muted small">@Model.Email</p>
                        </div>

                        <div class="row g-4">
                            <!-- Full Name -->
                            <div class="col-12">
                                <label asp-for="FullName" class="form-label fw-bold text-muted small">@(isRtl ? "الاسم الكامل" : "Full Name")</label>
                                <div class="input-group shadow-sm">
                                    <span class="input-group-text bg-light border-end-0 text-gold"><i class="fas fa-user"></i></span>
                                    <input asp-for="FullName" class="form-control bg-light border-start-0" required />
                                </div>
                                <span asp-validation-for="FullName" class="text-danger small mt-1"></span>
                            </div>

                            <!-- Email (Read Only) -->
                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label fw-bold text-muted small">@(isRtl ? "البريد الإلكتروني" : "Email Address")</label>
                                <div class="input-group shadow-sm">
                                    <span class="input-group-text bg-light border-end-0 text-muted"><i class="fas fa-envelope"></i></span>
                                    <input asp-for="Email" class="form-control bg-light border-start-0 text-muted" readonly />
                                </div>
                                <small class="text-muted" style="font-size: 0.7rem;">@(isRtl ? "لا يمكن تغيير البريد الإلكتروني" : "Email cannot be changed")</small>
                            </div>

                            <!-- Phone -->
                            <div class="col-md-6">
                                <label asp-for="PhoneNumber" class="form-label fw-bold text-muted small">@(isRtl ? "رقم الجوال" : "Phone Number")</label>
                                <div class="input-group shadow-sm">
                                    <span class="input-group-text bg-light border-end-0 text-gold"><i class="fas fa-phone"></i></span>
                                    <input asp-for="PhoneNumber" class="form-control bg-light border-start-0" required />
                                </div>
                                <span asp-validation-for="PhoneNumber" class="text-danger small mt-1"></span>
                            </div>

                            <!-- Job Title -->
                            <div class="col-md-12">
                                <label asp-for="JobTitle" class="form-label fw-bold text-muted small">@(isRtl ? "المسمى الوظيفي" : "Job Title")</label>
                                <div class="input-group shadow-sm">
                                    <span class="input-group-text bg-light border-end-0 text-gold"><i class="fas fa-briefcase"></i></span>
                                    <input asp-for="JobTitle" class="form-control bg-light border-start-0" required />
                                </div>
                                <span asp-validation-for="JobTitle" class="text-danger small mt-1"></span>
                            </div>
                        </div>

                        <hr class="my-4 opacity-10">

                        <div class="d-flex justify-content-end gap-2">
                            <button type="submit" class="btn btn-gold bg-dark text-gold fw-bold px-5 py-2 rounded-pill hover-scale shadow-lg">
                                <i class="fas fa-save me-2"></i> @(isRtl ? "حفظ التغييرات" : "Save Changes")
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>